# Makefile for FIDA serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

F77         = @F77@
FFLAGS      = @FFLAGS@
F77_LNKR    = @F77_LNKR@
F77_LDFLAGS = @F77_LDFLAGS@
F77_LIBS    = @F77_LIBS@

SUNDIALS_LIBS = -lsundials_fida -lsundials_ida -lsundials_fnvecserial -lsundials_nvecserial

EXAMPLES = fidadenx

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fidadenx: fidadenx.f
	${F77} ${FFLAGS} -c fidadenx.f
	${F77_LNKR} -o fidadenx fidadenx.o ${F77_LDFLAGS}  ${F77_LIBS} -L${libdir} ${SUNDIALS_LIBS}
