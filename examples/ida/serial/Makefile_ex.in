# Makefile for CVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_ida -lsundials_nvecserial

EXAMPLES = idadenx \
	   idabanx1 \
	   idakryx \
	   idabanx2 \
	   idakrydem_lin \
           idaslcr

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

idadenx: idadenx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idadenx.c
	 $(CC) -o idadenx idadenx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idabanx1: idabanx1.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idabanx1.c
	 $(CC) -o idabanx1 idabanx1.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idakryx: idakryx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idakryx.c
	 $(CC) -o idakryx idakryx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idabanx2: idabanx2.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idabanx2.c
	 $(CC) -o idabanx2 idabanx2.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idakrydem_lin: idakrydem_lin.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idakrydem_lin.c
	 $(CC) -o idakrydem_lin idakrydem_lin.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaslcr: idaslcr.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idaslcr.c
	 $(CC) -o idaslcr idaslcr.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
