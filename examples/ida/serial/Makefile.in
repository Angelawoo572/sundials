# Makefile for IDA serial examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include -I$(top_builddir)/include

SUNDIALS_LIBS = $(top_builddir)/src/ida/libsundials_ida.la                \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

SUNDIALS_BL_LIBS = $(top_builddir)/src/ida/libsundials_ida_bl.la          \
	           $(top_builddir)/src/ida/libsundials_ida.la             \
	           $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

EXEC_FILES = idadenx$(EXE_EXT) \
	     idabanx1$(EXE_EXT) \
	     idakryx$(EXE_EXT) \
	     idabanx2$(EXE_EXT) \
	     idakrydem_lin$(EXE_EXT)

EXEC_BL_FILES =

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make all_bl;                               \
	fi
all_bl: $(EXEC_BL_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/ida/serial
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/Makefile_ex       $(EXS_INSTDIR)/ida/serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/README            $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idabanx1.c        $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idabanx2.c        $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idadenx.c         $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idakrydem_lin.c   $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idakryx.c         $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idabanx1.out      $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idabanx2.out      $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idadenx.out       $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idakrydem_lin.out $(EXS_INSTDIR)/ida/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/serial/idakryx.out       $(EXS_INSTDIR)/ida/serial/

uninstall:
	rm -f $(EXS_INSTDIR)/ida/serial/Makefile
	rm -f $(EXS_INSTDIR)/ida/serial/README
	rm -f $(EXS_INSTDIR)/ida/serial/idabanx1.c
	rm -f $(EXS_INSTDIR)/ida/serial/idabanx2.c
	rm -f $(EXS_INSTDIR)/ida/serial/idadenx.c
	rm -f $(EXS_INSTDIR)/ida/serial/idakrydem_lin.c
	rm -f $(EXS_INSTDIR)/ida/serial/idakryx.c
	rm -f $(EXS_INSTDIR)/ida/serial/idabanx1.out
	rm -f $(EXS_INSTDIR)/ida/serial/idabanx2.out
	rm -f $(EXS_INSTDIR)/ida/serial/idadenx.out
	rm -f $(EXS_INSTDIR)/ida/serial/idakrydem_lin.out
	rm -f $(EXS_INSTDIR)/ida/serial/idakryx.out
	$(rminstalldirs) $(EXS_INSTDIR)/ida/serial
	$(rminstalldirs) $(EXS_INSTDIR)/ida

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)
	rm -f $(EXEC_BL_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

idadenx$(EXE_EXT): $(srcdir)/idadenx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idadenx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idadenx$(EXE_EXT) $(builddir)/idadenx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idabanx1$(EXE_EXT): $(srcdir)/idabanx1.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idabanx1.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idabanx1$(EXE_EXT) $(builddir)/idabanx1$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idakryx$(EXE_EXT): $(srcdir)/idakryx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idakryx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idakryx$(EXE_EXT) $(builddir)/idakryx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idabanx2$(EXE_EXT): $(srcdir)/idabanx2.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idabanx2.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idabanx2$(EXE_EXT) $(builddir)/idabanx2$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idakrydem_lin$(EXE_EXT): $(srcdir)/idakrydem_lin.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idakrydem_lin.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idakrydem_lin$(EXE_EXT) $(builddir)/idakrydem_lin$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
