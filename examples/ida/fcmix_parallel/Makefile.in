# Makefile for FIDA parallel examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

FFLAGS      = @FFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
FLIBS       = @FLIBS@
MPIF77      = @MPIF77@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@
MPIF77_LNKR = @MPIF77_LNKR@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_LIBS = $(top_builddir)/src/ida/fcmix/libsundials_fida.la         \
                $(top_builddir)/src/ida/libsundials_ida.la                \
                $(top_builddir)/src/nvec_par/libsundials_fnvecparallel.la \
                $(top_builddir)/src/nvec_par/libsundials_nvecparallel.la

fortran-update = ${SHELL} ${top_builddir}/bin/fortran-update.sh

EXEC_FILES = fidakryx_bbd_p$(EXE_EXT)

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/ida/fcmix_parallel
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/fcmix_parallel/Makefile_ex        $(EXS_INSTDIR)/ida/fcmix_parallel/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/fcmix_parallel/README             $(EXS_INSTDIR)/ida/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/fcmix_parallel/fidakryx_bbd_p.f   $(EXS_INSTDIR)/ida/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/fcmix_parallel/fidakryx_bbd_p.out $(EXS_INSTDIR)/ida/fcmix_parallel/

uninstall:
	rm -f $(EXS_INSTDIR)/ida/fcmix_parallel/Makefile
	rm -f $(EXS_INSTDIR)/ida/fcmix_parallel/README
	rm -f $(EXS_INSTDIR)/ida/fcmix_parallel/fidakryx_bbd_p.f
	rm -f $(EXS_INSTDIR)/ida/fcmix_parallel/fidakryx_bbd_p.out
	$(rminstalldirs) $(EXS_INSTDIR)/ida/fcmix_parallel
	$(rminstalldirs) $(EXS_INSTDIR)/ida

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

fidakryx_bbd_p$(EXE_EXT): $(srcdir)/fidakryx_bbd_p.f
	@${fortran-update} ${srcdir} fidakryx_bbd_p.f
	 ${LIBTOOL} --mode=compile ${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c ${builddir}/fidakryx_bbd_p-updated.f
	@if test "X${MPIF77_LNKR}" = "X${MPIF77}"; then                                                                                                                                                                                         \
	   echo "${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fidakryx_bbd_p${EXE_EXT} ${builddir}/fidakryx_bbd_p-updated${OBJ_EXT} ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fidakryx_bbd_p${EXE_EXT} ${builddir}/fidakryx_bbd_p-updated${OBJ_EXT} ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                                                                                                                                                   \
	   echo "${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fidakryx_bbd_p${EXE_EXT} ${builddir}/fidakryx_bbd_p-updated${OBJ_EXT} ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fidakryx_bbd_p${EXE_EXT} ${builddir}/fidakryx_bbd_p-updated${OBJ_EXT} ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
