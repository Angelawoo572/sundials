SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

FFLAGS       = @FFLAGS@
F77_LDFLAGS  = @F77_LDFLAGS@
F77_LIBS     = @F77_LIBS@

MPIF77       = @MPIF77@
MPI_INC_DIR  = @MPI_INC_DIR@
MPI_FLAGS    = @MPI_FLAGS@
MPIF77_LNKR  = @MPIF77_LNKR@
MPI_LIB_DIR  = @MPI_LIB_DIR@
MPI_LIBS     = @MPI_LIBS@

SUNDIALS_LIBS = -lsundials_fida -lsundials_ida -lsundials_fnvecparallel -lsundials_nvecparallel

EXAMPLES = fidakryx_bbd_p

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fidakryx_bbd_p$(EXE_EXT): fidakryx_bbd_p.f
	${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c fidakryx_bbd_p.f
	${MPIF77_LNKR} -o fidakryx_bbd_p fidakryx_bbd_p.o ${MPI_FLAGS} ${F77_LDFLAGS} -L${libdir} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}
