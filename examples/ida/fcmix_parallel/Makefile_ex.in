SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

FFLAGS      = @FFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
FLIBS       = @FLIBS@
MPIF77      = @MPIF77@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@
MPIF77_LNKR = @MPIF77_LNKR@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_fida -lsundials_ida -lsundials_fnvecparallel -lsundials_nvecparallel

EXAMPLES = fidakryx_bbd_p

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fidakryx_bbd_p$(EXE_EXT): fidakryx_bbd_p.f
	${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c fidakryx_bbd_p.f
	@if test "X${MPIF77_LNKR}" = "X${MPIF77}"; then                                                                                                                \
	   echo "${MPIF77_LNKR} -o fidakryx_bbd_p fidakryx_bbd_p.o ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${MPIF77_LNKR} -o fidakryx_bbd_p fidakryx_bbd_p.o ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                                                                          \
	   echo "${MPIF77_LNKR} -o fidakryx_bbd_p fidakryx_bbd_p.o ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${MPIF77_LNKR} -o fidakryx_bbd_p fidakryx_bbd_p.o ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi
