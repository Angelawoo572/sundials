# Makefile for CVODE parallel examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_cvode -lsundials_nvecparallel

EXAMPLES = cvnonx_p \
	   cvkryx_p \
	   cvkryx_bbd_p

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

cvnonx_p: cvnonx_p.c
	$(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c cvnonx_p.c
	$(MPICC) -o cvnonx_p cvnonx_p.o $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvkryx_p: cvkryx_p.c
	$(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c cvkryx_p.c
	$(MPICC) -o cvkryx_p cvkryx_p.o $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvkryx_bbd_p: cvkryx_bbd_p.c
	$(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c cvkryx_bbd_p.c
	$(MPICC) -o cvkryx_bbd_p cvkryx_bbd_p.o $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)

