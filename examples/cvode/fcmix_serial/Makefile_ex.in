# Makefile for FCVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

F77         = @F77@
FFLAGS      = @FFLAGS@
F77_LNKR    = @F77_LNKR@
F77_LDFLAGS = @F77_LDFLAGS@
F77_LIBS    = @F77_LIBS@

SUNDIALS_LIBS = -lsundials_fcvode -lsundials_cvode -lsundials_fnvecserial -lsundials_nvecserial

EXAMPLES = fcvdenx \
	   fcvbanx \
	   fcvkryx \
	   fcvkryx_bp

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fcvdenx: fcvdenx.f
	$(F77) $(FFLAGS) -c fcvdenx.f
	$(F77_LNKR) -o fcvdenx fcvdenx.o $(F77_LDFLAGS) $(F77_LIBS) -L$(libdir) $(SUNDIALS_LIBS)

fcvbanx: fcvbanx.f
	$(F77) $(FFLAGS) -c fcvbanx.f
	$(F77_LNKR) -o fcvbanx fcvbanx.o $(F77_LDFLAGS) $(F77_LIBS) -L$(libdir) $(SUNDIALS_LIBS)

fcvkryx: fcvkryx.f
	$(F77) $(FFLAGS) -c fcvkryx.f
	$(F77_LNKR) -o fcvkryx fcvkryx.o $(F77_LDFLAGS) $(F77_LIBS) -L$(libdir) $(SUNDIALS_LIBS)

fcvkryx_bp: fcvkryx_bp.f
	$(F77) $(FFLAGS) -c fcvkryx_bp.f
	$(F77_LNKR) -o fcvkryx_bp fcvkryx_bp.o $(F77_LDFLAGS) $(F77_LIBS) -L$(libdir) $(SUNDIALS_LIBS)
