# Makefile for FCVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

F77      = @F77@
FFLAGS   = @FFLAGS@
FLIBS    = @FLIBS@
CC       = @CC@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@
F77_LNKR = @F77_LNKR@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_fcvode -lsundials_cvode -lsundials_fnvecserial -lsundials_nvecserial

EXAMPLES = fcvdenx \
	   fcvbanx \
	   fcvkryx \
	   fcvkryx_bp

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fcvdenx: fcvdenx.f
	${F77} ${FFLAGS} -c fcvdenx.f
	@if test "X${F77_LNKR}" = "X${F77}"; then                                                           \
	   echo "${F77_LNKR} -o fcvdenx fcvdenx.o ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	    ${F77_LNKR} -o fcvdenx fcvdenx.o ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;       \
	 else                                                                                               \
	   echo "${F77_LNKR} -o fcvdenx fcvdenx.o ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	    ${F77_LNKR} -o fcvdenx fcvdenx.o ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;       \
	 fi

