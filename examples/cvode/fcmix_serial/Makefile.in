# Makefile for FCVODE serial examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

F77          = @F77@
FFLAGS       = @FFLAGS@
F77_LNKR     = @F77_LNKR@
F77_LDFLAGS  = @F77_LDFLAGS@
F77_LIBS     = @F77_LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_LIBS = $(top_builddir)/src/cvode/fcmix/libsundials_fcvode.la       \
                $(top_builddir)/src/cvode/libsundials_cvode.la              \
                $(top_builddir)/src/nvec_ser/libsundials_fnvecserial.la     \
                $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

SUNDIALS_BL_LIBS = $(top_builddir)/src/cvode/fcmix/libsundials_fcvode_bl.la \
                   $(top_builddir)/src/cvode/libsundials_cvode_bl.la

fortran-update = ${SHELL} ${top_builddir}/bin/fortran-update.sh

EXEC_FILES = fcvdenx$(EXE_EXT) \
	     fcvbanx$(EXE_EXT) \
	     fcvkryx$(EXE_EXT) \
	     fcvkryx_bp$(EXE_EXT)

EXEC_BL_FILES = fcvdenx_lap$(EXE_EXT)

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make all_bl;                               \
	fi

all_bl: $(EXEC_BL_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/cvode/fcmix_serial
	$(INSTALL_FILE) Makefile_ex                                              $(EXS_INSTDIR)/cvode/fcmix_serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/README         $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvbanx.f      $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvdenx.f      $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvkryx.f      $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvkryx_bp.f   $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvbanx.out    $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvdenx.out    $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvkryx.out    $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvkryx_bp.out $(EXS_INSTDIR)/cvode/fcmix_serial/
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make install_bl;                           \
	fi

install_bl:
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvdenx_lap.f   $(EXS_INSTDIR)/cvode/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_serial/fcvdenx_lap.out $(EXS_INSTDIR)/cvode/fcmix_serial/

uninstall:
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/Makefile
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/README
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvbanx.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvdenx.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvdenx_lap.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvkryx_bp.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvkryx.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvbanx.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvdenx_lap.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvdenx.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvkryx_bp.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_serial/fcvkryx.out
	$(rminstalldirs) $(EXS_INSTDIR)/cvode/fcmix_serial
	$(rminstalldirs) $(EXS_INSTDIR)/cvode

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f $(EXEC_FILES)
	rm -f $(EXEC_BL_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

fcvdenx$(EXE_EXT): $(srcdir)/fcvdenx.f
	@${fortran-update} ${srcdir} fcvdenx.f
	 ${LIBTOOL} --mode=compile ${F77} ${FFLAGS} -c ${builddir}/fcvdenx-updated.f
	 ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvdenx${EXE_EXT} ${builddir}/fcvdenx-updated${OBJ_EXT} ${F77_LDFLAGS} ${SUNDIALS_LIBS} ${F77_LIBS}

fcvbanx$(EXE_EXT): $(srcdir)/fcvbanx.f
	@${fortran-update} ${srcdir} fcvbanx.f
	 ${LIBTOOL} --mode=compile ${F77} ${FFLAGS} -c ${builddir}/fcvbanx-updated.f
	 ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvbanx${EXE_EXT} ${builddir}/fcvbanx-updated${OBJ_EXT} ${F77_LDFLAGS} ${SUNDIALS_LIBS} ${F77_LIBS}

fcvkryx$(EXE_EXT): $(srcdir)/fcvkryx.f
	@${fortran-update} ${srcdir} fcvkryx.f
	 ${LIBTOOL} --mode=compile ${F77} ${FFLAGS} -c $(builddir)/fcvkryx-updated.f
	 ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvkryx${EXE_EXT} ${builddir}/fcvkryx-updated${OBJ_EXT} ${F77_LDFLAGS} ${SUNDIALS_LIBS} ${F77_LIBS}

fcvkryx_bp$(EXE_EXT): $(srcdir)/fcvkryx_bp.f
	@${fortran-update} ${srcdir} fcvkryx_bp.f
	 ${LIBTOOL} --mode=compile ${F77} ${FFLAGS} -c ${builddir}/fcvkryx_bp-updated.f
	 ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvkryx_bp${EXE_EXT} ${builddir}/fcvkryx_bp-updated${OBJ_EXT} ${F77_LDFLAGS} ${SUNDIALS_LIBS} ${F77_LIBS}

fcvdenx_lap$(EXE_EXT): $(srcdir)/fcvdenx_lap.f
	@${fortran-update} ${srcdir} fcvdenx_lap.f
	 ${LIBTOOL} --mode=compile ${F77} ${FFLAGS} -c ${builddir}/fcvdenx_lap-updated.f
	 ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvdenx_lap${EXE_EXT} ${builddir}/fcvdenx_lap-updated${OBJ_EXT} ${F77_LDFLAGS} ${SUNDIALS_BL_LIBS} ${SUNDIALS_LIBS} ${F77_LIBS} ${BLAS_LAPACK_LIBS}


libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
