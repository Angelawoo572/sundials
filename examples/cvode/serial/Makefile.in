SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

OBJ_EXT = @OBJ_EXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..
SUNDIALS_INCDIR = $(top_srcdir)/include
SOLVER_SRCDIR   = $(top_builddir)/src/cvode
NVEC_SRCDIR     = $(top_builddir)/src/nvec_ser

SUNDIALS_INCS = -I$(SUNDIALS_INCDIR) -I$(top_builddir)/src
SUNDIALS_LIBS = $(SOLVER_SRCDIR)/libsundials_cvode.la $(NVEC_SRCDIR)/libsundials_nvecserial.la

EXEC_FILES = cvdenx cvdenx_uw cvbanx cvkryx cvkryx_bp cvdirectdem cvkrydem_pre cvkrydem_lin

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs

all: $(EXEC_FILES)

cvdenx: $(srcdir)/cvdenx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvdenx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvdenx $(builddir)/cvdenx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvdenx_uw: $(srcdir)/cvdenx_uw.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvdenx_uw.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvdenx_uw $(builddir)/cvdenx_uw.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvbanx: $(srcdir)/cvbanx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvbanx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvbanx $(builddir)/cvbanx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkryx: $(srcdir)/cvkryx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvkryx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvkryx $(builddir)/cvkryx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkryx_bp: $(srcdir)/cvkryx_bp.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvkryx_bp.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvkryx_bp $(builddir)/cvkryx_bp.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvdirectdem: $(srcdir)/cvdirectdem.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvdirectdem.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvdirectdem $(builddir)/cvdirectdem.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkrydem_pre: $(srcdir)/cvkrydem_pre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvkrydem_pre.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvkrydem_pre $(builddir)/cvkrydem_pre.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkrydem_lin: $(srcdir)/cvkrydem_lin.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvkrydem_lin.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/cvkrydem_lin $(builddir)/cvkrydem_lin.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)
	$(mkinstalldirs) $(EXS_INSTDIR)/cvode/serial
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvbanx             $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvdenx             $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvdenx_uw          $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvdirectdem        $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvkrydem_lin       $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvkrydem_pre       $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvkryx_bp          $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/cvode/serial/cvkryx             $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvbanx.out           $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvdenx.out           $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvdenx_uw.out        $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvdirectdem.out      $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvkrydem_lin.out     $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvkrydem_pre.out     $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvkryx_bp.out        $(EXS_INSTDIR)/cvode/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/serial/cvkryx.out           $(EXS_INSTDIR)/cvode/serial/


libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
