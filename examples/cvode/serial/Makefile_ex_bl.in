# Makefile for CVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_cvode -lsundials_nvecserial
SUNDIALS_BL_LIBS = -L$(libdir) -lsundials_cvode_bl -lsundials_cvode -lsundials_nvecserial

EXAMPLES = cvdenx \
	   cvdenx_uw \
	   cvbanx \
	   cvkryx \
	   cvkryx_bp \
	   cvdirectdem \
	   cvkrydem_pre \
	   cvkrydem_lin \
	   cvdenx_lap \
	   cvbanx_lap

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

cvdenx: cvdenx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvdenx.c
	 $(CC) -o cvdenx cvdenx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvdenx_uw: cvdenx_uw.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvdenx_uw.c
	 $(CC) -o cvdenx_uw cvdenx_uw.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvbanx: cvbanx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvbanx.c
	 $(CC) -o cvbanx cvbanx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkryx: cvkryx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvkryx.c
	 $(CC) -o cvkryx cvkryx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkryx_bp: cvkryx_bp.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvkryx_bp.c
	 $(CC) -o cvkryx_bp cvkryx_bp.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvdirectdem: cvdirectdem.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvdirectdem.c
	 $(CC) -o cvdirectdem cvdirectdem.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkrydem_pre: cvkrydem_pre.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvkrydem_pre.c
	 $(CC) -o cvkrydem_pre cvkrydem_pre.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvkrydem_lin: cvkrydem_lin.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvkrydem_lin.c
	 $(CC) -o cvkrydem_lin cvkrydem_lin.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
cvdenx_lap: cvdenx_lap.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvdenx_lap.c
	 $(CC) -o cvdenx_lap cvdenx_lap.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_BL_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)
cvbanx_lap: cvbanx_lap.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c cvbanx_lap.c
	 $(CC) -o cvbanx_lap cvbanx_lap.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_BL_LIBS) $(LIBS) $(BLAS_LAPACK_LIBS)

