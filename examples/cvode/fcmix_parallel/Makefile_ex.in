# Makefile for FCVODE parallel examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

FFLAGS       = @FFLAGS@
F77_LDFLAGS  = @F77_LDFLAGS@
F77_LIBS     = @F77_LIBS@

MPIF77       = @MPIF77@
MPI_INC_DIR  = @MPI_INC_DIR@
MPI_FLAGS    = @MPI_FLAGS@
MPIF77_LNKR  = @MPIF77_LNKR@
MPI_LIB_DIR  = @MPI_LIB_DIR@
MPI_LIBS     = @MPI_LIBS@

SUNDIALS_LIBS = -lsundials_fcvode -lsundials_cvode -lsundials_fnvecparallel -lsundials_nvecparallel

EXAMPLES = fcvnonx_p \
	   fcvkryx_p \
	   fcvkryx_bbd_p

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fcvnonx_p: fcvnonx_p.f
	${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c fcvnonx_p.f
	${MPIF77_LNKR} -o fcvnonx_p fcvnonx_p.o ${MPI_FLAGS} ${F77_LDFLAGS} -L${libdir} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}

fcvkryx_p: fcvkryx_p.f
	${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c fcvkryx_p.f
	${MPIF77_LNKR} -o fcvkryx_p fcvkryx_p.o ${MPI_FLAGS} ${F77_LDFLAGS} -L${libdir} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}

fcvkryx_bbd_p: fcvkryx_bbd_p.f
	${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c fcvkryx_bbd_p.f
	${MPIF77_LNKR} -o fcvkryx_bbd_p fcvkryx_bbd_p.o ${MPI_FLAGS} ${F77_LDFLAGS} -L${libdir} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}
