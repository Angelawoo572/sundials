# Makefile for FCVODE parallel examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

FFLAGS       = @FFLAGS@
F77_LDFLAGS  = @F77_LDFLAGS@
F77_LIBS     = @F77_LIBS@

MPIF77       = @MPIF77@
MPI_INC_DIR  = @MPI_INC_DIR@
MPI_FLAGS    = @MPI_FLAGS@
MPIF77_LNKR  = @MPIF77_LNKR@
MPI_LIB_DIR  = @MPI_LIB_DIR@
MPI_LIBS     = @MPI_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_LIBS = $(top_builddir)/src/cvode/fcmix/libsundials_fcvode.la     \
                $(top_builddir)/src/cvode/libsundials_cvode.la            \
                $(top_builddir)/src/nvec_par/libsundials_fnvecparallel.la \
                $(top_builddir)/src/nvec_par/libsundials_nvecparallel.la

fortran-update = ${SHELL} ${top_builddir}/bin/fortran-update.sh

EXEC_FILES = fcvnonx_p$(EXE_EXT) \
	     fcvkryx_p$(EXE_EXT) \
	     fcvkryx_bbd_p$(EXE_EXT)

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/cvode/fcmix_parallel
	$(INSTALL_FILE) Makefile_ex                                                   $(EXS_INSTDIR)/cvode/fcmix_parallel/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/README            $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvkryx_bbd_p.f   $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvkryx_p.f       $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvnonx_p.f       $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvkryx_bbd_p.out $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvkryx_p.out     $(EXS_INSTDIR)/cvode/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvode/fcmix_parallel/fcvnonx_p.out     $(EXS_INSTDIR)/cvode/fcmix_parallel/

uninstall:
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/Makefile
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/README
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvkryx_bbd_p.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvkryx_p.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvnonx_p.f
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvkryx_bbd_p.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvkryx_p.out
	rm -f $(EXS_INSTDIR)/cvode/fcmix_parallel/fcvnonx_p.out
	$(rminstalldirs) $(EXS_INSTDIR)/cvode/fcmix_parallel
	$(rminstalldirs) $(EXS_INSTDIR)/cvode

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

fcvnonx_p$(EXE_EXT): $(srcdir)/fcvnonx_p.f
	@${fortran-update} ${srcdir} fcvnonx_p.f
	@${LIBTOOL} --mode=compile ${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c ${builddir}/fcvnonx_p-updated.f
	@${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fcvnonx_p${EXE_EXT} ${builddir}/fcvnonx_p-updated${OBJ_EXT} ${MPI_FLAGS} ${F77_LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}

fcvkryx_p$(EXE_EXT): $(srcdir)/fcvkryx_p.f
	@${fortran-update} ${srcdir} fcvkryx_p.f
	@${LIBTOOL} --mode=compile ${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c ${builddir}/fcvkryx_p-updated.f
	@${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fcvkryx_p${EXE_EXT} ${builddir}/fcvkryx_p-updated${OBJ_EXT} ${MPI_FLAGS} ${F77_LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}

fcvkryx_bbd_p$(EXE_EXT): $(srcdir)/fcvkryx_bbd_p.f
	@${fortran-update} ${srcdir} fcvkryx_bbd_p.f
	@${LIBTOOL} --mode=compile ${MPIF77} ${MPI_FLAGS} -I${MPI_INC_DIR} ${FFLAGS} -c ${builddir}/fcvkryx_bbd_p-updated.f
	@${LIBTOOL} --mode=link ${MPIF77_LNKR} -o ${builddir}/fcvkryx_bbd_p${EXE_EXT} ${builddir}/fcvkryx_bbd_p-updated${OBJ_EXT} ${MPI_FLAGS} ${F77_LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${F77_LIBS}

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
