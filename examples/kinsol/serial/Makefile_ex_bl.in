# Makefile for CVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_kinsol -lsundials_nvecserial
SUNDIALS_BL_LIBS = -L$(libdir) -lsundials_kinsol_bl -lsundials_kinsol -lsundials_nvecserial

EXAMPLES = kinkryx \
	   kindenx1 \
	   kindenx2 \
	   kinbanx \
	   kinkrydem_lin

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

kinkryx: kinkryx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c kinkryx.c
	 $(CC) -o kinkryx kinkryx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kindenx1: kindenx1.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c kindenx1.c
	 $(CC) -o kindenx1 kindenx1.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kindenx2: kindenx2.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c kindenx2.c
	 $(CC) -o kindenx2 kindenx2.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kinbanx: kinbanx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c kinbanx.c
	 $(CC) -o kinbanx kinbanx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kinkrydem_lin: kinkrydem_lin.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c kinkrydem_lin.c
	 $(CC) -o kinkrydem_lin kinkrydem_lin.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
