# Makefile for KINSOL serial examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include

SUNDIALS_LIBS = $(top_builddir)/src/kinsol/libsundials_kinsol.la         \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

SUNDIALS_BL_LIBS = $(top_builddir)/src/kinsol/libsundials_kinsol_bl.la   \
	           $(top_builddir)/src/kinsol/libsundials_kinsol.la      \
	           $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

EXEC_FILES = kinkryx$(EXE_EXT) \
	     kindenx1$(EXE_EXT) \
	     kindenx2$(EXE_EXT) \
	     kinbanx$(EXE_EXT) \
	     kinkrydem_lin$(EXE_EXT)

EXEC_BL_FILES =

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make all_bl;                               \
	fi
all_bl: $(EXEC_BL_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/kinsol/serial
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/Makefile_ex       $(EXS_INSTDIR)/kinsol/serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/README            $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinkryx.c         $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kindenx1.c        $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kindenx2.c        $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinbanx.c         $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinkrydem_lin.c   $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinkryx.out       $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kindenx1.out      $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kindenx2.out      $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinbanx.out       $(EXS_INSTDIR)/kinsol/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/serial/kinkrydem_lin.out $(EXS_INSTDIR)/kinsol/serial/
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make install_bl;                           \
	fi

install_bl:

uninstall:
	rm -f $(EXS_INSTDIR)/kinsol/serial/Makefile
	rm -f $(EXS_INSTDIR)/kinsol/serial/README
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinbanx.c
	rm -f $(EXS_INSTDIR)/kinsol/serial/kindenx1.c
	rm -f $(EXS_INSTDIR)/kinsol/serial/kindenx2.c
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinkrydem_lin.c
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinkryx.c
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinbanx.out
	rm -f $(EXS_INSTDIR)/kinsol/serial/kindenx1.out
	rm -f $(EXS_INSTDIR)/kinsol/serial/kindenx2.out
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinkrydem_lin.out
	rm -f $(EXS_INSTDIR)/kinsol/serial/kinkryx.out
	$(rminstalldirs) $(EXS_INSTDIR)/kinsol/serial
	$(rminstalldirs) $(EXS_INSTDIR)/kinsol

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)
	rm -f $(EXEC_BL_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

kinkryx$(EXE_EXT): $(srcdir)/kinkryx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/kinkryx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kinkryx$(EXE_EXT) $(builddir)/kinkryx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kindenx1$(EXE_EXT): $(srcdir)/kindenx1.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/kindenx1.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kindenx1$(EXE_EXT) $(builddir)/kindenx1$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kindenx2$(EXE_EXT): $(srcdir)/kindenx2.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/kindenx2.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kindenx2$(EXE_EXT) $(builddir)/kindenx2$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kinbanx$(EXE_EXT): $(srcdir)/kinbanx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/kinbanx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kinbanx$(EXE_EXT) $(builddir)/kinbanx$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
kinkrydem_lin$(EXE_EXT): $(srcdir)/kinkrydem_lin.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/kinkrydem_lin.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kinkrydem_lin$(EXE_EXT) $(builddir)/kinkrydem_lin$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
