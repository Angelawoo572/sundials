# Makefile for FKINSOL serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

F77      = @F77@
FFLAGS   = @FFLAGS@
FLIBS    = @FLIBS@
CC       = @CC@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@
F77_LNKR = @F77_LNKR@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecserial -lsundials_nvecserial
SUNDIALS_BL_LIBS = -L$(libdir) -lsundials_fkinsol_bl -lsundials_kinsol_bl -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecserial -lsundials_nvecserial

EXAMPLES = fkinkryx

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fkinkryx: fkinkryx.f
	$(F77) $(FFLAGS) -c fkinkryx.f
	@if test "X${F77_LNKR}" = "X${F77}"; then                                                             \
	   echo "${F77_LNKR} -o fkinkryx fkinkryx.o ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${F77_LNKR} -o fkinkryx fkinkryx.o ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                 \
	   echo "${F77_LNKR} -o fkinkryx fkinkryx.o ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${F77_LNKR} -o fkinkryx fkinkryx.o ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi
