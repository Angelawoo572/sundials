# Makefile for FKINSOL serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

F77         = @F77@
FFLAGS      = @FFLAGS@
F77_LNKR    = @F77_LNKR@
F77_LDFLAGS = @F77_LDFLAGS@
F77_LIBS    = @F77_LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_LIBS = -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecserial -lsundials_nvecserial
SUNDIALS_BL_LIBS = -lsundials_fkinsol_bl -lsundials_kinsol_bl

EXAMPLES = fkinkryx

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

fkinkryx: fkinkryx.f
	$(F77) $(FFLAGS) -c fkinkryx.f
	${F77_LNKR} -o fkinkryx fkinkryx.o ${F77_LDFLAGS} ${F77_LIBS} -L${libdir} ${SUNDIALS_LIBS}
