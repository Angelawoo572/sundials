# Makefile for CPODES serial examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
LAPACK_LIBS    = @LAPACK_LIBS@

BLAS_ENABLED = @BLAS_ENABLED@
BLAS_LIBS    = @BLAS_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include -I$(top_builddir)/include

SUNDIALS_LIBS = $(top_builddir)/src/cpodes/libsundials_cpodes.la          \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

EXAMPLES = cpsAdvDiff_bnd \
	   cpsAdvDiff_non \
	   cpsNewtCrd_dns \
	   cpsPend_dns \
	   cpsRoberts_dns \
	   cpsVanDPol_non

EXAMPLES_BL = cpsAdvDiff_bndL \
	      cpsPend_dnsL \
	      cpsRoberts_dnsL

OBJECTS = ${EXAMPLES:=${OBJ_EXT}}
OBJECTS_BL = ${EXAMPLES_BL:=${OBJ_EXT}}
EXECS = ${EXAMPLES:=${EXE_EXT}}
EXECS_BL = ${EXAMPLES_BL:=${EXE_EXT}}

# ----------------------------------------------------------------------------------------------------------------------

all:
	@for i in ${EXAMPLES} ; do \
	  $(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/$${i}.c -o $${i}${OBJ_EXT} ; \
	  $(LIBTOOL) --mode=link $(CC) -o $(builddir)/$${i}$(EXE_EXT) $(builddir)/$${i}${OBJ_EXT} $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(LAPACK_LIBS) $(BLAS_LIBS) ; \
	done
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	for i in ${EXAMPLES_BL} ; do \
	  $(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/$${i}.c -o $${i}${OBJ_EXT} ; \
	  $(LIBTOOL) --mode=link $(CC) -o $(builddir)/$${i}$(EXE_EXT) $(builddir)/$${i}${OBJ_EXT} $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS) $(LAPACK_LIBS) $(BLAS_LIBS) ; \
	done ; \
	fi

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/cpodes/serial
	$(INSTALL_FILE) Makefile_ex $(EXS_INSTDIR)/cpodes/serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/cpodes/serial/README $(EXS_INSTDIR)/cpodes/serial/
	for i in ${EXAMPLES} ; do \
	  $(INSTALL_FILE) $(top_srcdir)/examples/cpodes/serial/$${i}.c   $(EXS_INSTDIR)/cpodes/serial/ ; \
	  $(INSTALL_FILE) $(top_srcdir)/examples/cpodes/serial/$${i}.out $(EXS_INSTDIR)/cpodes/serial/ ; \
	done
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	for i in ${EXAMPLES_BL} ; do \
	  $(INSTALL_FILE) $(top_srcdir)/examples/cpodes/serial/$${i}.c   $(EXS_INSTDIR)/cpodes/serial/ ; \
	  $(INSTALL_FILE) $(top_srcdir)/examples/cpodes/serial/$${i}.out $(EXS_INSTDIR)/cpodes/serial/ ; \
	done ; \
	fi

uninstall:
	rm -f $(EXS_INSTDIR)/cpodes/serial/Makefile
	rm -f $(EXS_INSTDIR)/cpodes/serial/README
	for i in ${EXAMPLES} ; do \
	  rm -f $(EXS_INSTDIR)/cpodes/serial/$${i}.c ; \
	  rm -f $(EXS_INSTDIR)/cpodes/serial/$${i}.out ; \
	done
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	for i in ${EXAMPLES_BL} ; do \
	  rm -f $(EXS_INSTDIR)/cpodes/serial/$${i}.c ; \
	  rm -f $(EXS_INSTDIR)/cpodes/serial/$${i}.out ; \
	done ; \
	fi
	$(rminstalldirs) $(EXS_INSTDIR)/cpodes/serial
	$(rminstalldirs) $(EXS_INSTDIR)/cpodes

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f ${OBJECTS} ${OBJECTS_BL}
	rm -f $(EXECS) $(EXECS_BL)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
