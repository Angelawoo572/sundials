SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include -I$(top_builddir)/include

SUNDIALS_LIBS = $(top_builddir)/src/idas/libsundials_idas.la              \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

SUNDIALS_BL_LIBS = $(top_builddir)/src/idas/libsundials_idas_bl.la        \
	           $(top_builddir)/src/idas/libsundials_idas.la           \
	           $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

EXEC_FILES = idasRobertson$(EXE_EXT) \
	     idasHeat2D_b$(EXE_EXT) \
	     idasHeat2D_k$(EXE_EXT) \
	     idasFoodWeb_b$(EXE_EXT) \
	     idasKrylovDemo$(EXE_EXT) \
	     idasSliderCrank$(EXE_EXT) \
	     idasSliderCrankFSA$(EXE_EXT) \
	     idasRobertsonFSA$(EXE_EXT) \
	     idasRobertsonASA$(EXE_EXT) \
	     idasRobertsonHessian$(EXE_EXT) \
             idasAkzoNobel$(EXE_EXT)
             idasAkzoNobelASA$(EXE_EXT)

EXEC_BL_FILES =

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make all_bl;                               \
	fi
all_bl: $(EXEC_BL_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/idas/serial
	$(INSTALL_FILE) Makefile_ex                                                 $(EXS_INSTDIR)/idas/serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/README                   $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasHeat2D_b.c           $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasFoodWeb_b.c          $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertson.c          $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasKrylovDemo.c         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasHeat2D_k.c           $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasSliderCrank.c        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasSliderCrankFSA.c     $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonFSA.c       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonASA.c       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonHessian.c   $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasAkzoNobel.c          $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasAkzoNobelASA.c       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasHeat2D_b.out         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasFoodWeb_b.out        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertson.out        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasKrylovDemo.out       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasHeat2D_k.out         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasSliderCrank.out      $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasSliderCrankFSA.out   $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonFSA.out     $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonASA.out     $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasRobertsonHessian.out $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasAkzoNobel.out        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasAkzoNobelASA.out     $(EXS_INSTDIR)/idas/serial/
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make install_bl;                           \
	fi

install_bl:

uninstall:
	rm -f $(EXS_INSTDIR)/idas/serial/Makefile
	rm -f $(EXS_INSTDIR)/idas/serial/README
	rm -f $(EXS_INSTDIR)/idas/serial/idasHeat2D_b.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasFoodWeb_b.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertson.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasKrylovDemo.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasHeat2D_k.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasSliderCrank.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasSliderCrankFSA.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonFSA.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonASA.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonHessian.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasHeat2D_b.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasFoodWeb_b.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertson.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasKrylovDemo.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasHeat2D_k.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasSliderCrank.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasSliderCrankFSA.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonFSA.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonASA.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasRobertsonHessian.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasAkzoNobelASA.out
	$(rminstalldirs) $(EXS_INSTDIR)/idas/serial
	$(rminstalldirs) $(EXS_INSTDIR)/idas

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)
	rm -f $(EXEC_BL_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

