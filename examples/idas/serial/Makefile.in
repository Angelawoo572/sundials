# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

OBJ_EXT = @OBJ_EXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..
SUNDIALS_INCDIR = $(top_srcdir)/include
SOLVER_SRCDIR   = $(top_builddir)/src/idas
NVEC_SRCDIR     = $(top_builddir)/src/nvec_ser

SUNDIALS_INCS = -I$(SUNDIALS_INCDIR) -I$(top_builddir)/src
SUNDIALS_LIBS = $(SOLVER_SRCDIR)/libsundials_idas.la $(NVEC_SRCDIR)/libsundials_nvecserial.la

EXEC_FILES = idasdenx idasbanx1 idaskryx idasbanx2 idaskrydem_lin

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs

all: $(EXEC_FILES)

idasdenx: $(srcdir)/idasdenx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasdenx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasdenx $(builddir)/idasdenx.$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx1: $(srcdir)/idasbanx1.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasbanx1.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasbanx1 $(builddir)/idasbanx1.$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskryx: $(srcdir)/idaskryx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idaskryx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idaskryx $(builddir)/idaskryx.$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx2: $(srcdir)/idasbanx2.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasbanx2.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasbanx2 $(builddir)/idasbanx2.$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskrydem_lin: $(srcdir)/idaskrydem_lin.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idaskrydem_lin.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idaskrydem_lin $(builddir)/idaskrydem_lin.$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)
	$(mkinstalldirs) $(EXS_INSTDIR)/idas/serial
	$(INSTALL_PROG) $(top_builddir)/examples/idas/serial/idasbanx1         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/idas/serial/idasbanx2         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/idas/serial/idasdenx          $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/idas/serial/idaskrydem_lin    $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_PROG) $(top_builddir)/examples/idas/serial/idaskryx          $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx1.out       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx2.out       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasdenx.out        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskrydem_lin.out  $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskryx.out        $(EXS_INSTDIR)/idas/serial/

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
