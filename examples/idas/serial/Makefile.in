# Makefile for IDAS serial examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LAPACK_ENABLED = @LAPACK_ENABLED@
BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include -I$(top_builddir)/include

SUNDIALS_LIBS = $(top_builddir)/src/idas/libsundials_idas.la              \
	        $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

SUNDIALS_BL_LIBS = $(top_builddir)/src/idas/libsundials_idas_bl.la        \
	           $(top_builddir)/src/idas/libsundials_idas.la           \
	           $(top_builddir)/src/nvec_ser/libsundials_nvecserial.la

EXEC_FILES = idasdenx$(EXE_EXT) \
	     idasbanx1$(EXE_EXT) \
	     idaskryx$(EXE_EXT) \
	     idasbanx2$(EXE_EXT) \
	     idaskrydem_lin$(EXE_EXT)

EXEC_BL_FILES =

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make all_bl;                               \
	fi
all_bl: $(EXEC_BL_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/idas/serial
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/Makefile_ex        $(EXS_INSTDIR)/idas/serial/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/README             $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx1.c        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx2.c        $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasdenx.c         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskrydem_lin.c   $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskryx.c         $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx1.out      $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasbanx2.out      $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idasdenx.out       $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskrydem_lin.out $(EXS_INSTDIR)/idas/serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/idas/serial/idaskryx.out       $(EXS_INSTDIR)/idas/serial/
	@if test "X${LAPACK_ENABLED}" = "Xyes"; then \
	  make install_bl;                           \
	fi

install_bl:

uninstall:
	rm -f $(EXS_INSTDIR)/idas/serial/Makefile
	rm -f $(EXS_INSTDIR)/idas/serial/README
	rm -f $(EXS_INSTDIR)/idas/serial/idasbanx1.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasbanx2.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasdenx.c
	rm -f $(EXS_INSTDIR)/idas/serial/idaskrydem_lin.c
	rm -f $(EXS_INSTDIR)/idas/serial/idaskryx.c
	rm -f $(EXS_INSTDIR)/idas/serial/idasbanx1.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasbanx2.out
	rm -f $(EXS_INSTDIR)/idas/serial/idasdenx.out
	rm -f $(EXS_INSTDIR)/idas/serial/idaskrydem_lin.out
	rm -f $(EXS_INSTDIR)/idas/serial/idaskryx.out
	$(rminstalldirs) $(EXS_INSTDIR)/idas/serial
	$(rminstalldirs) $(EXS_INSTDIR)/idas

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)
	rm -f $(EXEC_BL_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

idasdenx$(EXE_EXT): $(srcdir)/idasdenx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasdenx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasdenx$(EXE_EXT) $(builddir)/idasdenx$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx1$(EXE_EXT): $(srcdir)/idasbanx1.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasbanx1.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasbanx1$(EXE_EXT) $(builddir)/idasbanx1$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskryx$(EXE_EXT): $(srcdir)/idaskryx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idaskryx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idaskryx$(EXE_EXT) $(builddir)/idaskryx$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx2$(EXE_EXT): $(srcdir)/idasbanx2.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idasbanx2.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idasbanx2$(EXE_EXT) $(builddir)/idasbanx2$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskrydem_lin$(EXE_EXT): $(srcdir)/idaskrydem_lin.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/idaskrydem_lin.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/idaskrydem_lin$(EXE_EXT) $(builddir)/idaskrydem_lin$(OBJ_EXT) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
