# Makefile for CVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_idas -lsundials_nvecserial

EXAMPLES = idasdenx \
	   idasbanx1 \
	   idaskryx \
	   idasbanx2 \
	   idaskrydem_lin \
           idasslcr \
           idasfwddenx

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

idasdenx: idasdenx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasdenx.c
	 $(CC) -o idasdenx idasdenx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx1: idasbanx1.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasbanx1.c
	 $(CC) -o idasbanx1 idasbanx1.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskryx: idaskryx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idaskryx.c
	 $(CC) -o idaskryx idaskryx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasbanx2: idasbanx2.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasbanx2.c
	 $(CC) -o idasbanx2 idasbanx2.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idaskrydem_lin: idaskrydem_lin.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idaskrydem_lin.c
	 $(CC) -o idaskrydem_lin idaskrydem_lin.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
idasslcr: idasslcr.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasslcr.c
	 $(CC) -o idasslcr idasslcr.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)

idasfwddenx: idasfwddenx.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasfwddenx.c
	 $(CC) -o idasfwddenx idasfwddenx.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
