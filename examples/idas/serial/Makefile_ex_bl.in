SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_idas -lsundials_nvecserial
SUNDIALS_BL_LIBS = -L$(libdir) -lsundials_idas_bl -lsundials_idas -lsundials_nvecserial

EXAMPLES = idasRobertson \
	   idasHeat2D_b \
	   idasHeat2D_k \
	   idasFoodWeb_b \
	   idasKrylovDemo \
           idasSliderCrank \
           idasSliderCrankFSA \
           idasRobertsonFSA \
           idasRobertsonASA \
           idasRobertsonHessian \
           idasAkzoNobel \
           idasAkzoNobelASA
# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

idasRobertson: idasRobertson.c
	 $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c idasRobertson.c
	 $(CC) -o idasRobertson idasRobertson.o $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) $(LIBS)
