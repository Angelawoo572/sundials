# Makefile for @SOLVER@ CUDA examples
#
# This file is generated from a template using various variables
# set at configuration time. It can be used as a template for
# other user Makefiles.
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CC      	= @CMAKE_C_COMPILER@
CFLAGS    = @CMAKE_C_FLAGS@
CXX       = @CMAKE_CXX_COMPILER@
LDFLAGS   = @LDFLAGS@
LIBS      = @LIBS@
NVCC      = @CUDA_NVCC_EXECUTABLE@
NVCCFLAGS = -std c++11
CUDALIBS  = @CUDA_CUDART_LIBRARY@
CUDALIBDIR= $(dir ${CUDALIBS})

LINKFLAGS = -Wl,-rpath,${libdir}:${CUDALIBDIR}

MPI_INC_DIR = @MPI_CXX_INCLUDE_PATH@

TMP_INCS = ${includedir} ${MPI_INC_DIR}
INCLUDES = $(addprefix -I, ${TMP_INCS})

TMP_LIBRARIES_SUNDIALS = @SOLVER_LIB@ sundials_nveccuda 
LIBRARIES_SUNDIALS = ${addprefix -l, ${TMP_LIBRARIES_SUNDIALS}}

LIBRARIES = ${LIBRARIES_SUNDIALS} ${LIBS} ${CUDALIBS}

EXAMPLES = @EXAMPLES@ @EXAMPLES_BL@
EXAMPLES_DEPENDENCIES = @EXAMPLES_DEPENDENCIES@

OBJECTS = ${EXAMPLES:=.o}
OBJECTS_DEPENDENCIES = ${EXAMPLES_DEPENDENCIES:=.o}

# -----------------------------------------------------------------------------------------

.SUFFIXES : .o .cu

.c.o :
	${CC} ${CFLAGS} -I${includedir} -c $<

.cu.o :
	${NVCC} ${NVCCFLAGS} ${INCLUDES} -c $<

# -----------------------------------------------------------------------------------------

all: ${OBJECTS}
	@for i in ${EXAMPLES} ; do \
	  echo "${CXX} -o $${i} $${i}.o ${OBJECTS_DEPENDENCIES} ${LDFLAGS} -I${includedir} -L${libdir} ${LIBRARIES} ${LINKFLAGS}" ; \
	  ${CXX} -o $${i} $${i}.o ${OBJECTS_DEPENDENCIES} ${LDFLAGS} -I${includedir} \
			-L${libdir} ${LIBRARIES} ${LINKFLAGS} ; \
	done

${OBJECTS}: ${OBJECTS_DEPENDENCIES}

clean:
	rm -f ${OBJECTS_DEPENDENCIES}
	rm -f ${OBJECTS}
	rm -f ${EXAMPLES}

# -----------------------------------------------------------------------------------------

