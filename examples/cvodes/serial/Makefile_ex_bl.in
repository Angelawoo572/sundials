# Makefile for CVODE serial examples
# -----------------------------------------------------------------

SHELL = @SHELL@

prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

BLAS_LAPACK_LIBS = @BLAS_LAPACK_LIBS@

SUNDIALS_INCS = -I$(includedir)
SUNDIALS_LIBS = -L$(libdir) -lsundials_cvodes -lsundials_nvecserial
SUNDIALS_BL_LIBS = -L$(libdir) -lsundials_cvodes_bl -lsundials_cvodes -lsundials_nvecserial

EXAMPLES = cvsdenx \
	   cvsdenx_uw \
	   cvsbanx \
	   cvskryx \
	   cvskryx_bp \
	   cvsdirectdem \
	   cvskrydem_pre \
	   cvsfwdnonx \
	   cvsfwddenx \
	   cvsfwdkryx \
	   cvsadjdenx \
	   cvsadjbanx \
	   cvsadjkryx_int \
	   cvsadjkryx_pnt \
	   cvskrydem_lin \
           cvsadjhess \
	   cvsbanx_lap \
	   cvsdenx_lap

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXAMPLES)

clean:
	rm -f *.o
	rm -f $(EXAMPLES)

# ----------------------------------------------------------------------------------------------------------------------

