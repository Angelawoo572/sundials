SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@

OBJ_EXT = @OBJ_EXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..
SUNDIALS_INCDIR = $(top_srcdir)/include
SOLVER_SRCDIR   = $(top_builddir)/src/cvodes
NVEC_SRCDIR     = $(top_builddir)/src/nvec_par

SUNDIALS_INCS = -I$(SUNDIALS_INCDIR) -I$(top_builddir)/src
SUNDIALS_LIBS = $(SOLVER_SRCDIR)/libsundials_cvodes.la $(NVEC_SRCDIR)/libsundials_nvecparallel.la

EXEC_FILES = cvsnonx_p cvskryx_p cvskryx_bbd_p cvsfwdnonx_p cvsfwdkryx_p cvsadjnonx_p cvsadjkryx_p cvsadjkryx_p3D

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs

all: $(EXEC_FILES)

cvsnonx_p: $(srcdir)/cvsnonx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsnonx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsnonx_p $(builddir)/cvsnonx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvskryx_p: $(srcdir)/cvskryx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvskryx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvskryx_p $(builddir)/cvskryx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvskryx_bbd_p: $(srcdir)/cvskryx_bbd_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvskryx_bbd_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvskryx_bbd_p $(builddir)/cvskryx_bbd_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsfwdnonx_p: $(srcdir)/cvsfwdnonx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsfwdnonx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsfwdnonx_p $(builddir)/cvsfwdnonx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsfwdkryx_p: $(srcdir)/cvsfwdkryx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsfwdkryx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsfwdkryx_p $(builddir)/cvsfwdkryx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsadjnonx_p: $(srcdir)/cvsadjnonx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsadjnonx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsadjnonx_p $(builddir)/cvsadjnonx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsadjkryx_p: $(srcdir)/cvsadjkryx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsadjkryx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsadjkryx_p $(builddir)/cvsadjkryx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsadjkryx_p3D: $(srcdir)/cvsadjkryx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -DUSE3D -c $(srcdir)/cvsadjkryx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/cvsadjkryx_p3D $(builddir)/cvsadjkryx_p.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)
	$(mkinstalldirs) $(EXS_INSTDIR)/cvodes/parallel
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsadjkryx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsadjnonx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsfwdkryx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsfwdkryx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsfwdnonx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsfwdnonx_p       $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvskryx_bbd_p      $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvskryx_p          $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_PROG) $(top_builddir)/examples/cvodes/parallel/cvsnonx_p          $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsadjkryx_p.out     $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsadjnonx_p.out     $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsfwdkryx_p.out1    $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsfwdkryx_p.out2    $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsfwdnonx_p.out1    $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsfwdnonx_p.out2    $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvskryx_bbd_p.out    $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvskryx_p.out        $(EXS_INSTDIR)/cvodes/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/cvodes/parallel/cvsnonx_p.out        $(EXS_INSTDIR)/cvodes/parallel/


libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
