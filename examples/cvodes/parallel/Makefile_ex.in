	$(MPICC) -o cvsfwdnonx_p cvsfwdnonx_p.o $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsfwdkryx_p: cvsfwdkryx_p.c
