	$(MPICC) -o cvsfwdkryx_p cvsfwdkryx_p.o $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
cvsadjnonx_p: cvsadjnonx_p.c
