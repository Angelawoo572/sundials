SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

SLV_MODULES  = @SLV_MODULES@
EXS_MODULES  = @EXS_MODULES@
STB_MODULES  = @STB_MODULES@

ALL_MODULES  = @SLV_MODULES@ @EXS_MODULES@ @STB_MODULES@

EXS_INSTDIR  = @EXS_INSTDIR@
STB_INSTDIR  = @STB_INSTDIR@

# -----------------------------------------------------------------

all:
	@for i in ${ALL_MODULES} ; do              \
	   if test -d $${i} ; then                 \
	     echo "----------------------";        \
	     echo "Make $${i}..." ;                \
	     echo "----------------------";        \
	     cd $${i} ;                            \
	     ${MAKE} ;                             \
	     cd ${abs_builddir} ;                  \
	     echo "" ;                             \
	   fi ;                                    \
	 done

install:
	@for i in ${SLV_MODULES} ; do              \
	   if test -d $${i} ; then                 \
	     echo "----------------------";        \
	     echo "Install $${i}..." ;             \
	     echo "----------------------";        \
	     cd $${i} ;                            \
	     ${MAKE} install ;                     \
	     cd ${abs_builddir} ;                  \
	     echo "" ;                             \
	   fi ;                                    \
	 done
	@if test -n "${EXS_MODULES}" ; then        \
	  if test "X${EXS_INSTDIR}" = "Xno"; then  \
	    echo "" ;                              \
	    echo "" ;                              \
	    echo -n "Examples were built but" ;    \
	    echo "installation was disabled." ;    \
	    echo "" ;                              \
	    echo "" ;                              \
	  else                                     \
	    for i in ${EXS_MODULES} ; do           \
	      echo "----------------------";       \
	      echo "Install $${i}..." ;            \
	      echo "----------------------";       \
	      cd $${i} ;                           \
	      ${MAKE} install ;                    \
	      cd ${abs_builddir} ;                 \
	      echo "" ;                            \
	    done ;                                 \
	  fi ;                                     \
	fi
	@if test -n "${STB_MODULES}" ; then        \
	  if test "X${STB_INSTDIR}" = "Xno"; then  \
	    echo "" ;                              \
	    echo "" ;                              \
	    echo -n "sundialsSTB was built but" ;  \
	    echo "installation was disabled." ;    \
	    echo "" ;                              \
	    echo "" ;                              \
	  else                                     \
	    for i in ${STB_MODULES} ; do           \
	      echo "----------------------";       \
	      echo "Install $${i}..." ;            \
	      echo "----------------------";       \
	      cd $${i} ;                           \
	      ${MAKE} install ;                    \
	      cd ${abs_builddir} ;                 \
	      echo "" ;                            \
	    done ;                                 \
	  fi ;                                     \
	fi

clean:
	@for i in ${ALL_MODULES} ; do              \
	   if test -d $${i} ; then                 \
	     cd $${i} ;                            \
	     ${MAKE} clean ;                       \
	     cd ${abs_builddir} ;                  \
	   fi ;                                    \
	 done

uninstall:
	@for i in ${ALL_MODULES} ; do              \
	   if test -d $${i} ; then                 \
	     cd $${i} ;                            \
	     ${MAKE} uninstall ;                   \
	     cd ${abs_builddir} ;                  \
	   fi ;                                    \
	 done

# ---------------------------------------------------------------------

distclean:
	@for i in ${ALL_MODULES} ; do              \
	  if test -d $${i} ; then                  \
	    cd $${i};                              \
	    ${MAKE} distclean;                     \
	    cd ${abs_builddir} ;                   \
	  fi ;                                     \
	done
	rm -f config.log
	rm -f config.status
	rm -f config.cache
	rm -f config.h
	rm -f libtool
	rm -f src/sundials/sundials_config.h
	rm -f examples/fortran_update.sh
	rm -f Makefile

