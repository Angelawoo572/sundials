SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

CONFIG_INC_DIR = $(top_builddir)/config
SHARED_INC_DIR = $(srcdir)/../include

SHARED_LIB_FILES = band.lo dense.lo iterative.lo sundialsmath.lo nvector.lo smalldense.lo spgmr.lo spbcg.lo sptfqmr.lo
SHARED_OBJ_FILES = band.o dense.o iterative.o sundialsmath.o nvector.o smalldense.o spgmr.o spbcg.o sptfqmr.o

all: $(SHARED_LIB_FILES)

install: $(SHARED_LIB_FILES)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/band.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/dense.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/iterative.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/sundialsmath.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/sundialstypes.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/nvector.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/fnvector.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/smalldense.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/spgmr.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/spbcg.h $(includedir)
	$(INSTALL_HEADER) $(SHARED_INC_DIR)/sptfqmr.h $(includedir)
	$(INSTALL_HEADER) $(CONFIG_INC_DIR)/sundials_config.h $(includedir)

clean:
	rm -f $(SHARED_LIB_FILES)
	rm -f $(SHARED_OBJ_FILES)

uninstall: clean
	rm -f $(includedir)/band.h
	rm -f $(includedir)/dense.h
	rm -f $(includedir)/iterative.h
	rm -f $(includedir)/sundialsmath.h
	rm -f $(includedir)/sundialstypes.h
	rm -f $(includedir)/nvector.h
	rm -f $(includedir)/fnvector.h
	rm -f $(includedir)/smalldense.h
	rm -f $(includedir)/spgmr.h
	rm -f $(includedir)/spbcg.h
	rm -f $(includedir)/sptfqmr.h
	rm -f $(includedir)/sundials_config.h

band.lo: $(srcdir)/band.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/band.c
dense.lo: $(srcdir)/dense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/dense.c
iterative.lo: $(srcdir)/iterative.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/iterative.c
sundialsmath.lo: $(srcdir)/sundialsmath.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/sundialsmath.c
sundialstypes.lo: $(srcdir)/sundialstypes.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/sundialstypes.c
nvector.lo: $(srcdir)/nvector.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/nvector.c
smalldense.lo: $(srcdir)/smalldense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/smalldense.c
spgmr.lo: $(srcdir)/spgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/spgmr.c
spbcg.lo: $(srcdir)/spbcg.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/spbcg.c
sptfqmr.lo: $(srcdir)/sptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) $(CFLAGS) -c $(srcdir)/sptfqmr.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
