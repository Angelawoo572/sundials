SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@

OBJ_EXT = @OBJ_EXT@
EXE_EXT = @EXEEXT@

top_srcdir = $(srcdir)/../../..
SUNDIALS_INCDIR = $(top_srcdir)/include
SOLVER_SRCDIR   = $(top_builddir)/src/cvodes
NVEC_SRCDIR     = $(top_builddir)/src/nvec_par

SUNDIALS_INCS = -I$(SUNDIALS_INCDIR) -I$(top_builddir)/src
SUNDIALS_LIBS = $(SOLVER_SRCDIR)/libsundials_cvodes.la $(NVEC_SRCDIR)/libsundials_nvecparallel.la

EXEC_FILES = pvkt$(EXE_EXT) pvfkt$(EXE_EXT)

all: $(EXEC_FILES)

pvkt$(EXE_EXT): $(srcdir)/pvkt.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvkt.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvkt$(EXE_EXT) $(builddir)/pvkt.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
pvfkt$(EXE_EXT): $(srcdir)/pvfkt.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvfkt.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvfkt$(EXE_EXT) $(builddir)/pvfkt.$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
