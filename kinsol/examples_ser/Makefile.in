SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

LIBTOOL = @LIBTOOL@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_kinsol -lsundials_nvecserial -lsundials_shared

OBJECT_FILES = kinwebs.o
EXEC_FILES   = kinwebs

all: $(EXEC_FILES)

kinwebs: $(srcdir)/kinwebs.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) $(CFLAGS) -c $(srcdir)/kinwebs.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/kinwebs $(builddir)/kinwebs.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}.lo ;                      \
	 done
	rm -f $(OBJECT_FILES)
