# File Makefile
#--------------------------------------------------------------------------
# Makefile for the KINSOL examples using the serial N_Vector implementation.
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix = @prefix@
exec_prefix = @exec_prefix@
includedir = @includedir@
libdir = @libdir@

# SUNDIALS library and include directories
SUNDIALSINCLUDE = -I${includedir}
SUNDIALSLIBDIRS = -L${libdir}
SUNDIALSLIBS    = -lkinsol -lshared -lnvecserial

# Include
INCDIRS = -I${includedir}

# Libraries
LIBDIRS = ${SUNDIALSLIBDIRS}
LIBS    = ${SUNDIALSLIBS} -lm

# Compiler and compiler options
CC     = @CC@
CFLAGS = @CFLAGS@

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: kinwebs

kinwebs: kinwebs.o
	${CC} ${CFLAGS} -o kinwebs kinwebs.o ${LIBDIRS} ${LIBS}

clean:
	rm -f *.o
	rm -f kinwebs

.c.o:
	${CC} -c ${CFLAGS} ${INCDIRS} $*.c

#---End of Makefile---