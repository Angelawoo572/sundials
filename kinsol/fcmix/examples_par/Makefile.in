SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

@LIBTOOL_CMD@

FFLAGS      = @FFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
FLIBS       = @FLIBS@
MPIF77      = @MPIF77@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@

COMPILER_PREFIX = @COMPILER_PREFIX@
LINKER_PREFIX   = @LINKER_PREFIX@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecparallel -lsundials_nvecparallel -lsundials_shared

EXEC_FILES = kindiagpf

all: update $(EXEC_FILES)

update:
	@${INSTALL} ${top_builddir}/config/fortran_update ${builddir}/fortran_update.sh

kindiagpf: $(srcdir)/kindiagpf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} kindiagpf.f
	$(COMPILER_PREFIX) $(MPIF77) -I$(MPI_INC_DIR) $(FFLAGS) -c $(builddir)/kindiagpf.f
	$(LINKER_PREFIX) $(MPIF77) -o $(builddir)/kindiagpf $(builddir)/kindiagpf.o $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *.f
	rm -f fortran_update.sh

uninstall: clean
	rm -f $(EXEC_FILES)
