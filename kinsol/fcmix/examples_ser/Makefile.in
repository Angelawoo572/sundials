# File Makefile
#--------------------------------------------------------------------------
# Makefile for the FKINSOL examples using the serial N_Vector implementation.
# @configure_input@ 
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
FC      = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
LDFLAGS = @LDFLAGS@

# SUNDIALS library directory
SUNDIALS_LIB_DIR = ${libdir}
SUNDIALSLIBS    = 

# Libraries
LIBDIRS = -L${SUNDIALS_LIB_DIR}
LIBS    = -lfkinsol -lkinsol -lfnvecserial -lnvecserial -lshared

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: kindiagsf

kindiagsf: % : ${srcdir}/%.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}

clean:
	rm -f *.o
	rm -f kindiagsf

#---End of Makefile---