SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

LIBTOOL = @LIBTOOL@

F77     = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
LDFLAGS = @LDFLAGS@
LIBS    = @LIBS@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecserial -lsundials_nvecserial -lsundials_shared

SOURCE_FILES = kindiagsf.f
EXEC_FILES   = kindiagsf

all: update $(EXEC_FILES)

update:
	@${INSTALL} ${top_builddir}/config/fortran_update ${builddir}/fortran_update.sh

kindiagsf: $(srcdir)/kindiagsf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} kindiagsf.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/kindiagsf-updated.f
	$(LIBTOOL) --mode=link $(F77) -o $(builddir)/kindiagsf $(builddir)/kindiagsf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}-updated.f ;               \
	   rm -f $${i}-updated.lo ;              \
	   rm -f $${i}-updated.o ;               \
	 done
	rm -f fortran_update.sh
