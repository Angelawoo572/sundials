# Makefile for the FKINSOL test examples using parallel N_Vector
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
FFLAGS    = @FFLAGS@
LDFLAGS   = @LDFLAGS@
TEMP_LIBS      = @LIBS@
FLIBS     = @FLIBS@
MPIF77    = @MPIF77@
MPIINC    = @MPIINC@
MPILIBDIR = @MPILIBDIR@
MPILIBS   = @MPILIBS@

# SUNDIALS library directory
SUNDIALS_LIB_DIR = ${libdir}

INCDIRS = ${MPIINC}
LIBDIRS = -L${SUNDIALS_LIB_DIR} ${MPILIBDIR}
LIBS    = ${TEMP_LIBS} -lfkinsol -lkinsol -lfnvecparallel -lnvecparallel -lshared -lm ${MPILIBS}

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: kindiagpf-64bit

kindiagpf-64bit : ${srcdir}/kindiagpf-64bit.f
	${MPIF77} -c ${FFLAGS} ${INCDIRS} ${srcdir}/$@.f
	${MPIF77} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}

clean:
	rm -f *.o
	rm -f kindiagpf-64bit

#---End of Makefile---
