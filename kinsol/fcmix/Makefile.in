# Makefile for the FKINSOL package.
# @configure_input@
#--------------------------------------------------------------------------------

# Shell
SHELL = /bin/sh

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Archiver program
AR = @AR@

# Compiler and compiler options
CC       = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS   = @CFLAGS@

# KINSOL and SHARED include directories
SHARED_INC_DIR  = ${srcdir}/../../shared/include
KINSOL_INC_DIR  = ${srcdir}/../include
FKINSOL_INC_DIR = ${srcdir}

INCDIRS = -I${FKINSOL_INC_DIR} -I${KINSOL_INC_DIR} -I${SHARED_INC_DIR}

# FKINSOL library name
FKINSOL_LIB = libfkinsol.a

# Source and object files
SRC =	${srcdir}/fkinsol.c \
	${srcdir}/fkinpreco.c \
	${srcdir}/fkinpsol.c \
	${srcdir}/fkinjtimes.c \
	${srcdir}/fkinbbd.c

OBJ = fkinsol.o fkinpreco.o fkinpsol.o fkinjtimes.o fkinbbd.o

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: ${OBJ}

install: ${OBJ}
	${AR} ${FKINSOL_LIB} ${OBJ}
	cp ${FKINSOL_LIB} ${libdir}

clean:
	rm -f ${OBJ}
	rm -f ${FKINSOL_LIB}

uninstall:
	rm -f ${libdir}/${FKINSOL_LIB}

fkinsol.o : ${srcdir}/fkinsol.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<
fkinpreco.o : ${srcdir}/fkinpreco.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<
fkinpsol.o : ${srcdir}/fkinpsol.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<
fkinjtimes.o : ${srcdir}/fkinjtimes.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<
fkinbbd.o : ${srcdir}/fkinbbd.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<

#---End of Makefile---
