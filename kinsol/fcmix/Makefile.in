SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SHARED_INC_DIR   = $(srcdir)/../../shared/include
KINSOL_INC_DIR   = $(srcdir)/../include
FKINSOL_INC_DIR  = $(srcdir)

FKINSOL_LIB       = libsundials_fkinsol.la
FKINSOL_LIB_FILES = fkinsol.lo fkinpreco.lo fkinpsol.lo fkinjtimes.lo fkinbbd.lo

OBJECT_FILES = fkinsol.o fkinpreco.o fkinpsol.o fkinjtimes.o fkinbbd.o

all: update $(FKINSOL_LIB_FILES)

update:
	@echo "${INSTALL_HEADER} ${top_builddir}/config.h ${builddir}/sundials_config.h" ; \
	 ${INSTALL_HEADER} ${top_builddir}/config.h ${builddir}/sundials_config.h

install: update $(FKINSOL_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(FKINSOL_LIB) $(FKINSOL_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -static -avoid-version
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(FKINSOL_LIB) $(libdir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(FKINSOL_LIB)
	rm -f $(FKINSOL_LIB_FILES)
	rm -f $(OBJECT_FILES)
	rm -f sundials_config.h

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(FKINSOL_LIB)

fkinsol.lo: $(srcdir)/fkinsol.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) -I$(FKINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/fkinsol.c
fkinpreco.lo: $(srcdir)/fkinpreco.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) -I$(FKINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/fkinpreco.c
fkinpsol.lo: $(srcdir)/fkinpsol.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) -I$(FKINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/fkinpsol.c
fkinjtimes.lo: $(srcdir)/fkinjtimes.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) -I$(FKINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/fkinjtimes.c
fkinbbd.lo: $(srcdir)/fkinbbd.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) -I$(FKINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/fkinbbd.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
