# Makefile for the FKINSOL test examples using serial N_Vector
# @configure_input@ 
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
FC      = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
LDFLAGS = @LDFLAGS@
TEMP_LIBS    = @LIBS@

# SUNDIALS library directory
SUNDIALS_LIB_DIR = ${libdir}
SUNDIALSLIBS    = 

# Libraries
LIBDIRS = -L${SUNDIALS_LIB_DIR}
LIBS    = ${TEMP_LIBS} -lfkinsol -lkinsol -lfnvecserial -lnvecserial -lshared

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: kindiagsf-64bit

kindiagsf-64bit : ${srcdir}/kindiagsf-64bit.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}

clean:
	rm -f *.o
	rm -f kindiagsf-64bit

#---End of Makefile---
