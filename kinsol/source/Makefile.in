SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

CONFIG_INC_DIR = $(top_builddir)/config
SHARED_INC_DIR = $(srcdir)/../../shared/include
KINSOL_INC_DIR = $(srcdir)/../include

KINSOL_LIB       = libsundials_kinsol.la

KINSOL_LIB_FILES = kinsol.lo kinsolio.lo kindense.lo kinband.lo kinspgmr.lo kinspbcg.lo kinsptfqmr.lo kinbbdpre.lo
KINSOL_OBJ_FILES = kinsol.o kinsolio.o kindense.o kinband.o kinspgmr.o kinspbcg.o kinsptfqmr.o kinbbdpre.o

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/band.lo \
                   $(SHARED_BUILD_DIR)/dense.lo \
                   $(SHARED_BUILD_DIR)/iterative.lo \
                   $(SHARED_BUILD_DIR)/sundialsmath.lo \
                   $(SHARED_BUILD_DIR)/nvector.lo \
                   $(SHARED_BUILD_DIR)/smalldense.lo \
                   $(SHARED_BUILD_DIR)/spgmr.lo \
                   $(SHARED_BUILD_DIR)/spbcg.lo \
                   $(SHARED_BUILD_DIR)/sptfqmr.lo

all: $(KINSOL_LIB_FILES)

install: shared $(KINSOL_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(KINSOL_LIB) $(KINSOL_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -version-info 0:0:0
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(KINSOL_LIB) $(libdir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinsol.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kindense.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinband.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinspgmr.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinspbcg.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinsptfqmr.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinbbdpre.h $(includedir)
	$(INSTALL_HEADER) $(KINSOL_INC_DIR)/kinspils.h $(includedir)

shared:
	@cd $(SRC_BUILD_DIR); $(MAKE); cd $(abs_builddir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(KINSOL_LIB)
	rm -f $(KINSOL_LIB_FILES)
	rm -f $(KINSOL_OBJ_FILES)

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(KINSOL_LIB)
	rm -f $(includedir)/kinsol.h
	rm -f $(includedir)/kindense.h
	rm -f $(includedir)/kinband.h
	rm -f $(includedir)/kinspgmr.h
	rm -f $(includedir)/kinspbcg.h
	rm -f $(includedir)/kinsptfqmr.h
	rm -f $(includedir)/kinbbdpre.h
	rm -f $(includedir)/kinspils.h

kinsol.lo: $(srcdir)/kinsol.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinsol.c
kinsolio.lo: $(srcdir)/kinsolio.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinsolio.c
kindense.lo: $(srcdir)/kindense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kindense.c
kinband.lo: $(srcdir)/kinband.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinband.c
kinspgmr.lo: $(srcdir)/kinspgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinspgmr.c
kinspbcg.lo: $(srcdir)/kinspbcg.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinspbcg.c
kinsptfqmr.lo: $(srcdir)/kinsptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinsptfqmr.c
kinbbdpre.lo: $(srcdir)/kinbbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(KINSOL_INC_DIR) $(CFLAGS) -c $(srcdir)/kinbbdpre.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
