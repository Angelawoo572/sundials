# Makefile for the KINSOL package.
# @configure_input@
#--------------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@
VPATH  = @srcdir@

# Archiver program
AR = @AR@

# Compiler and compiler options
CC       = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS   = @CFLAGS@

# KINSOL and SHARED include directories
SHARED_INC_DIR = ${srcdir}/../../shared/include
KINSOL_INC_DIR  = ${srcdir}/../include

INCDIRS = -I${KINSOL_INC_DIR} -I${SHARED_INC_DIR}

# KINSOL library name
KINSOL_LIB = libkinsol.a

# Source and object files
SRC =	${srcdir}/kinsol.c \
	${srcdir}/kinspgmr.c \
	${srcdir}/kinbbdpre.c

OBJ = kinsol.o kinspgmr.o kinbbdpre.o

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: ${OBJ}

install: ${OBJ}
	${AR} ${KINSOL_LIB} ${OBJ}
	cp ${KINSOL_LIB} ${libdir}
	cp ${KINSOL_INC_DIR}/kinsol.h    ${includedir}
	cp ${KINSOL_INC_DIR}/kinspgmr.h  ${includedir}
	cp ${KINSOL_INC_DIR}/kinbbdpre.h ${includedir}

clean:
	rm -f ${OBJ}
	rm -f ${KINSOL_LIB}

uninstall:
	rm -f ${libdir}/${KINSOL_LIB}
	rm -f ${includedir}/kinsol.h
	rm -f ${includedir}/kinspgmr.h
	rm -f ${includedir}/kinbbdpre.h

.c.o:
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} -o $@ $<

#---End of Makefile---
