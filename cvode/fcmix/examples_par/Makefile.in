# File Makefile
#--------------------------------------------------------------------------
# Makefile for the FCVODE examples using the parallel N_Vector implementation.
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
FFLAGS    = @FFLAGS@
LDFLAGS   = @LDFLAGS@
FLIBS     = @FLIBS@
MPIF77    = @MPIF77@
MPIINC    = @MPIINC@
MPILIBDIR = @MPILIBDIR@
MPILIBS   = @MPILIBS@

# SUNDIALS library directory
SUNDIALS_LIB_DIR = ${libdir}

INCDIRS = ${MPIINC}
LIBDIRS = -L${SUNDIALS_LIB_DIR} ${MPILIBDIR}
LIBS    = -lfcvode -lcvode -lfnvecparallel -lnvecparallel -lshared -lm ${MPILIBS}

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: pvdiagnf pvdiagkf pvdiagkbf

pvdiagnf pvdiagkf pvdiagkbf: % : ${srcdir}/%.f
	${MPIF77} -c ${FFLAGS} ${INCDIRS} ${srcdir}/$@.f
	${MPIF77} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}

clean:
	rm -f *.o
	rm -f pvdiagnf pvdiagkf pvdiagkbf

#---End of Makefile---