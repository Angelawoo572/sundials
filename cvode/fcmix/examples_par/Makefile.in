SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

LIBTOOL = @LIBTOOL@

FFLAGS      = @FFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
FLIBS       = @FLIBS@
MPIF77      = @MPIF77@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fcvode -lsundials_cvode -lsundials_fnvecparallel -lsundials_nvecparallel -lsundials_shared

SOURCE_FILES = pvdiagnf.f pvdiagkf.f pvdiagkbf.f
EXEC_FILES   = pvdiagnf pvdiagkf pvdiagkbf

all: update $(EXEC_FILES)

update:
	@${INSTALL} ${top_builddir}/config/fortran_update ${builddir}/fortran_update.sh

pvdiagnf: $(srcdir)/pvdiagnf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} pvdiagnf.f
	$(LIBTOOL) --mode=compile $(MPIF77) -I$(MPI_INC_DIR) $(FFLAGS) -c $(builddir)/pvdiagnf-updated.f
	$(LIBTOOL) --mode=link $(MPIF77) -o $(builddir)/pvdiagnf $(builddir)/pvdiagnf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
pvdiagkf: $(srcdir)/pvdiagkf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} pvdiagkf.f
	$(LIBTOOL) --mode=compile $(MPIF77) -I$(MPI_INC_DIR) $(FFLAGS) -c $(builddir)/pvdiagkf-updated.f
	$(LIBTOOL) --mode=link $(MPIF77) -o $(builddir)/pvdiagkf $(builddir)/pvdiagkf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
pvdiagkbf: $(srcdir)/pvdiagkbf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} pvdiagkbf.f
	$(LIBTOOL) --mode=compile $(MPIF77) -I$(MPI_INC_DIR) $(FFLAGS) -c $(builddir)/pvdiagkbf-updated.f
	$(LIBTOOL) --mode=link $(MPIF77) -o $(builddir)/pvdiagkbf $(builddir)/pvdiagkbf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}-updated.f ;               \
	   rm -f $${i}-updated.lo ;              \
	   rm -f $${i}-updated.o ;               \
	 done
	rm -f fortran_update.sh
