SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

@LIBTOOL_CMD@

F77      = @F77@
FFLAGS   = @FFLAGS@
FLIBS    = @FLIBS@
CC       = @CC@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@
F77_LNKR = @F77_LNKR@

OBJ_EXT = @OBJ_EXT@

COMPILER_PREFIX = @COMPILER_PREFIX@
LINKER_PREFIX   = @LINKER_PREFIX@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fcvode -lsundials_cvode -lsundials_fnvecserial -lsundials_nvecserial -lsundials_shared

EXEC_FILES = fcvdenx fcvbanx fcvkryx fcvkryx_bp

all: $(EXEC_FILES)

fortran_update.sh:
	@${INSTALL} ${top_builddir}/config/fortran_update.sh ${builddir}

fcvdenx: $(srcdir)/fcvdenx.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} fcvdenx.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/fcvdenx-updated.f
	$(LINKER_PREFIX) $(F77_LNKR) -o $(builddir)/fcvdenx $(builddir)/fcvdenx-updated.$(OBJ_EXT) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS) $(FLIBS)

fcvbanx: $(srcdir)/fcvbanx.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} fcvbanx.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/fcvbanx-updated.f
	$(LINKER_PREFIX) $(F77_LNKR) -o $(builddir)/fcvbanx $(builddir)/fcvbanx-updated.$(OBJ_EXT) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS) $(FLIBS)

fcvkryx: $(srcdir)/fcvkryx.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} fcvkryx.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/fcvkryx-updated.f
	$(LINKER_PREFIX) $(F77_LNKR) -o $(builddir)/fcvkryx $(builddir)/fcvkryx-updated.$(OBJ_EXT) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS) $(FLIBS)

fcvkryx_bp: $(srcdir)/fcvkryx_bp.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} fcvkryx_bp.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/fcvkryx_bp-updated.f
	$(LINKER_PREFIX) $(F77_LNKR) -o $(builddir)/fcvkryx_bp $(builddir)/fcvkryx_bp-updated.$(OBJ_EXT) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS) $(FLIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f fortran_update.sh

uninstall: clean
	rm -f $(EXEC_FILES)
