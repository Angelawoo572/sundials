SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

LIBTOOL = @LIBTOOL@

F77     = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
LDFLAGS = @LDFLAGS@
LIBS    = @LIBS@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fcvode -lsundials_cvode -lsundials_fnvecserial -lsundials_nvecserial -lsundials_shared

SOURCE_FILES = cvdensef.f cvbandf.f cvkryf.f cvkrybf.f
EXEC_FILES   = cvdensef cvbandf cvkryf cvkrybf

all: update $(EXEC_FILES)

update:
	@${INSTALL} ${top_builddir}/config/fortran_update ${builddir}/fortran_update.sh

cvdensef: $(srcdir)/cvdensef.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} cvdensef.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/cvdensef-updated.f
	$(LIBTOOL) --mode=link $(F77) -o $(builddir)/cvdensef $(builddir)/cvdensef-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
cvbandf: $(srcdir)/cvbandf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} cvbandf.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/cvbandf-updated.f
	$(LIBTOOL) --mode=link $(F77)  -o $(builddir)/cvbandf $(builddir)/cvbandf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
cvkryf: $(srcdir)/cvkryf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} cvkryf.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/cvkryf-updated.f
	$(LIBTOOL) --mode=link $(F77)  -o $(builddir)/cvkryf $(builddir)/cvkryf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
cvkrybf: $(srcdir)/cvkrybf.f
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} cvkrybf.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/cvkrybf-updated.f
	$(LIBTOOL) --mode=link $(F77)  -o $(builddir)/cvkrybf $(builddir)/cvkrybf-updated.lo $(LDFLAGS) $(LIBS) $(FLIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}-updated.f ;               \
	   rm -f $${i}-updated.lo ;              \
	   rm -f $${i}-updated.o ;               \
	 done
	rm -f fortran_update.sh
