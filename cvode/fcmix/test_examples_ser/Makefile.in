# Makefile for the FCVODE test examples using serial N_Vector
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
FC      = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
LDFLAGS = @LDFLAGS@
TEMP_LIBS    = @LIBS@

# SUNDIALS library directory
SUNDIALS_LIB_DIR = ${libdir}

LIBDIRS = -L${SUNDIALS_LIB_DIR}
LIBS    = ${TEMP_LIBS} -lfcvode -lcvode -lfnvecserial -lnvecserial -lshared

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: cvdensef-64bit cvbandf-64bit cvkryf-64bit cvkrybf-64bit

cvdensef-64bit : ${srcdir}/cvdensef-64bit.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}
cvbandf-64bit : ${srcdir}/cvbandf-64bit.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}
cvkryf-64bit : ${srcdir}/cvkryf-64bit.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}
cvkrybf-64bit : ${srcdir}/cvkrybf-64bit.f
	${FC} -c ${FFLAGS} ${srcdir}/$@.f
	${FC} ${FFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS} ${FLIBS}

clean:
	rm -f *.o
	rm -f cvdensef-64bit cvbandf-64bit cvkryf-64bit cvkrybf-64bit

#---End of Makefile---
