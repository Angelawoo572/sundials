SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

CVODE_INC_DIR  = $(srcdir)/../include
SHARED_INC_DIR = $(srcdir)/../../shared/include
CONFIG_INC_DIR = $(top_builddir)/config

CVODE_LIB = libsundials_cvode.la

CVODE_LIB_FILES  = cvode.lo cvodeio.lo cvband.lo cvdense.lo cvdiag.lo cvspbcg.lo cvspgmr.lo cvsptfqmr.lo cvbandpre.lo cvbbdpre.lo
CVODE_OBJ_FILES  = cvode.o cvodeio.o cvband.o cvdense.o cvdiag.o cvspbcg.o cvspgmr.o cvsptfqmr.o cvbandpre.o cvbbdpre.o

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/band.lo \
                   $(SHARED_BUILD_DIR)/dense.lo \
                   $(SHARED_BUILD_DIR)/iterative.lo \
                   $(SHARED_BUILD_DIR)/sundialsmath.lo \
                   $(SHARED_BUILD_DIR)/nvector.lo \
                   $(SHARED_BUILD_DIR)/smalldense.lo \
                   $(SHARED_BUILD_DIR)/spgmr.lo \
                   $(SHARED_BUILD_DIR)/spbcg.lo \
                   $(SHARED_BUILD_DIR)/sptfqmr.lo

all: $(CVODE_LIB_FILES)

install: shared $(CVODE_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(CVODE_LIB) $(CVODE_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -version-info 0:0:0
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(CVODE_LIB) $(libdir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvode.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvdense.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvband.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvdiag.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvspils.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvspbcg.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvspgmr.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvsptfqmr.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvbandpre.h $(includedir)
	$(INSTALL_HEADER) $(CVODE_INC_DIR)/cvbbdpre.h $(includedir)

shared:
	@cd $(SHARED_BUILD_DIR); $(MAKE); cd $(abs_builddir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(CVODE_LIB)
	rm -f $(CVODE_LIB_FILES)
	rm -f $(CVODE_OBJ_FILES)

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(CVODE_LIB)
	rm -f $(includedir)/cvode.h
	rm -f $(includedir)/cvdense.h
	rm -f $(includedir)/cvband.h
	rm -f $(includedir)/cvdiag.h
	rm -f $(includedir)/cvspils.h
	rm -f $(includedir)/cvspbcg.h
	rm -f $(includedir)/cvspgmr.h
	rm -f $(includedir)/cvsptfqmr.h
	rm -f $(includedir)/cvbandpre.h
	rm -f $(includedir)/cvbbdpre.h

cvode.lo: $(srcdir)/cvode.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvode.c
cvodeio.lo: $(srcdir)/cvodeio.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodeio.c
cvdense.lo: $(srcdir)/cvdense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvdense.c
cvband.lo: $(srcdir)/cvband.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvband.c
cvdiag.lo: $(srcdir)/cvdiag.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvdiag.c
cvspbcg.lo: $(srcdir)/cvspbcg.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvspbcg.c
cvspgmr.lo: $(srcdir)/cvspgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvspgmr.c
cvsptfqmr.lo: $(srcdir)/cvsptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvsptfqmr.c
cvbandpre.lo: $(srcdir)/cvbandpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvbandpre.c
cvbbdpre.lo: $(srcdir)/cvbbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODE_INC_DIR) $(CFLAGS) -c $(srcdir)/cvbbdpre.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	$(SHELL) ./config.status --recheck ; \
	cd $(abs_builddir)
