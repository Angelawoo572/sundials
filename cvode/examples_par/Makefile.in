SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

LIBTOOL = @LIBTOOL@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_cvode -lsundials_nvecparallel -lsundials_shared

OBJECT_FILES = pvnx.o pvkx.o pvkxb.o
EXEC_FILES   = pvnx pvkx pvkxb

all: $(EXEC_FILES)

pvnx: $(srcdir)/pvnx.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvnx.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvnx $(builddir)/pvnx.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
pvkx: $(srcdir)/pvkx.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvkx.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvkx $(builddir)/pvkx.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
pvkxb: $(srcdir)/pvkxb.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvkxb.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvkxb $(builddir)/pvkxb.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}.lo ;                      \
	 done
	rm -f $(OBJECT_FILES)
