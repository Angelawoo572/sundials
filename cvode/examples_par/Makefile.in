# File Makefile
#--------------------------------------------------------------------------
# Makefile for the CVODE examples using the parallel N_Vector implementation.
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
CPPFLAGS  = @CPPFLAGS@
CFLAGS    = @CFLAGS@
LDFLAGS   = @LDFLAGS@
TEMP_LIBS      = @LIBS@
MPICC     = @MPICC@
MPIINC    = @MPIINC@
MPILIBDIR = @MPILIBDIR@
MPILIBS   = @MPILIBS@

# SUNDIALS library and include directories
SUNDIALS_INC_DIR = ${includedir}
SUNDIALS_LIB_DIR = ${libdir}

INCDIRS = -I${SUNDIALS_INC_DIR} ${MPIINC}
LIBDIRS = -L${SUNDIALS_LIB_DIR} ${MPILIBDIR}
LIBS    = ${TEMP_LIBS} -lcvode -lshared -lnvecparallel -lm ${MPILIBS}

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: pvnx pvkx pvkxb

pvnx: ${srcdir}/pvnx.c
	${MPICC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} ${srcdir}/$@.c
	${MPICC} ${CFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS}
pvkx: ${srcdir}/pvkx.c
	${MPICC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} ${srcdir}/$@.c
	${MPICC} ${CFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS}
pvkxb: ${srcdir}/pvkxb.c
	${MPICC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} ${srcdir}/$@.c
	${MPICC} ${CFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS}

clean:
	rm -f *.o
	rm -f pvnx pvkx pvkxb


#---End of Makefile---
