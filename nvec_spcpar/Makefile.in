SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

MPICC     = @MPICC@
MPI_LIBS  = @MPI_LIBS@
MPI_FLAGS = @MPI_FLAGS@
CPPFLAGS  = @CPPFLAGS@
CFLAGS    = @CFLAGS@
LDFLAGS   = @LDFLAGS@
LIBS      = @LIBS@

FCMIX_ENABLED = @FCMIX_ENABLED@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

MPI_INC_DIR        = @MPI_INC_DIR@
CONFIG_INC_DIR     = $(top_builddir)/config
SHARED_INC_DIR     = $(srcdir)/../shared/include
NVECSPCPAR_INC_DIR = $(srcdir)

NVECSPCPAR_LIB       = libsundials_nvecspcparallel.la
NVECSPCPAR_LIB_FILES = nvector_spcparallel.lo

FNVECSPCPAR_LIB       = libsundials_fnvecspcparallel.la
FNVECSPCPAR_LIB_FILES = fnvector_spcparallel.lo

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/sundialsmath.lo

all: $(NVECSPCPAR_LIB_FILES) $(FNVECSPCPAR_LIB_FILES)

install: shared $(NVECSPCPAR_LIB_FILES) $(FNVECSPCPAR_LIB_FILES)
	$(LIBTOOL) --mode=link $(MPICC) $(CFLAGS) $(MPI_FLAGS) -o $(NVECSPCPAR_LIB) $(NVECSPCPAR_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) $(MPI_LIBS) -version-info 0:0:0
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(NVECSPCPAR_LIB) $(libdir)
	$(INSTALL_HEADER) $(NVECSPCPAR_INC_DIR)/nvector_spcparallel.h $(includedir)
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                                                                                                                              \
	   echo "${LIBTOOL} --mode=link ${MPICC} ${CFLAGS} ${MPI_FLAGS} -o ${FNVECSPCPAR_LIB} ${FNVECSPCPAR_LIB_FILES} $(SHARED_LIB_FILES) -rpath ${libdir} $(LDFLAGS) ${LIBS} -static -version-info 0:0:0" ; \
	   ${LIBTOOL} --mode=link ${MPICC} ${CFLAGS} ${MPI_FLAGS} -o ${FNVECSPCPAR_LIB} ${FNVECSPCPAR_LIB_FILES} $(SHARED_LIB_FILES) -rpath ${libdir} $(LDFLAGS) ${LIBS} -static -version-info 0:0:0 ;        \
	   echo "${LIBTOOL} --mode=install ${INSTALL_LIB} ${FNVECSPCPAR_LIB} ${libdir}" ;                                                                                               \
	   ${LIBTOOL} --mode=install ${INSTALL_LIB} ${FNVECSPCPAR_LIB} ${libdir} ;                                                                                                      \
	 fi

shared:
	@cd $(SHARED_BUILD_DIR); $(MAKE); cd $(abs_builddir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(NVECSPCPAR_LIB)
	rm -f $(NVECSPCPAR_LIB_FILES)
	rm -f nvector_spcparallel.o
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                        \
	   echo "${LIBTOOL} --mode=clean rm -f ${FNVECSPCPAR_LIB}" ; \
	   ${LIBTOOL} --mode=clean rm -f ${FNVECSPCPAR_LIB} ;        \
	   echo "rm -f ${FNVECSPCPAR_LIB_FILES}" ;                   \
	   rm -f ${FNVECSPCPAR_LIB_FILES} ;                          \
	   echo "rm -f fnvector_spcparallel.o" ;                              \
	   rm -f fnvector_spcparallel.o ;                                     \
	 fi

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(NVECSPCPAR_LIB)
	rm -f $(includedir)/nvector_spcparallel.h
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                      \
	   echo "${LIBTOOL} --mode=uninstall rm -f ${libdir}/${FNVECSPCPAR_LIB}" ; \
	   ${LIBTOOL} --mode=uninstall rm -f ${libdir}/${FNVECSPCPAR_LIB} ;        \
	 fi

nvector_spcparallel.lo: $(srcdir)/nvector_spcparallel.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(NVECSPCPAR_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/nvector_spcparallel.c
fnvector_spcparallel.lo: $(srcdir)/fnvector_spcparallel.c
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                                                                                                                  \
	   echo "${LIBTOOL} --mode=compile ${MPICC} ${CPPFLAGS} ${MPI_FLAGS} -I. -I${SHARED_INC_DIR} -I${NVECSPCPAR_INC_DIR} -I${MPI_INC_DIR} ${CFLAGS} -c ${srcdir}/fnvector_spcparallel.c" ; \
	   ${LIBTOOL} --mode=compile ${MPICC} ${CPPFLAGS} ${MPI_FLAGS} -I$(CONFIG_INC_DIR) -I${SHARED_INC_DIR} -I${NVECSPCPAR_INC_DIR} -I${MPI_INC_DIR} ${CFLAGS} -c ${srcdir}/fnvector_spcparallel.c ;        \
	 fi

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
