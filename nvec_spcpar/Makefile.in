SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

MPICC     = @MPICC@
MPI_LIBS  = @MPI_LIBS@
MPI_FLAGS = @MPI_FLAGS@
CPPFLAGS  = @CPPFLAGS@
CFLAGS    = @CFLAGS@
LIBS      = @LIBS@

FCMIX_ENABLED = @FCMIX_ENABLED@

MPI_INC_DIR              = @MPI_INC_DIR@
SHARED_INC_DIR           = $(srcdir)/../shared/include
NVECTOR_SPCPARALLEL_INC_DIR = $(srcdir)

NVECTOR_SPCPARALLEL_LIB       = libsundials_nvecspcparallel.la
NVECTOR_SPCPARALLEL_LIB_FILES = nvector_spcparallel.lo

FNVECTOR_SPCPARALLEL_LIB       = libsundials_fnvecspcparallel.la
FNVECTOR_SPCPARALLEL_LIB_FILES = fnvector_spcparallel.lo

all: update $(NVECTOR_SPCPARALLEL_LIB_FILES) $(FNVECTOR_SPCPARALLEL_LIB_FILES)

update:
	${INSTALL_HEADER} ${top_builddir}/config/sundials_config.h ${builddir}

install: update $(NVECTOR_SPCPARALLEL_LIB_FILES) $(FNVECTOR_SPCPARALLEL_LIB_FILES)
	$(LIBTOOL) --mode=link $(MPICC) $(CFLAGS) $(MPI_FLAGS) -o $(NVECTOR_SPCPARALLEL_LIB) $(NVECTOR_SPCPARALLEL_LIB_FILES) -rpath $(libdir) $(LIBS) $(MPI_LIBS) -avoid-version
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(NVECTOR_SPCPARALLEL_LIB) $(libdir)
	$(INSTALL_HEADER) $(NVECTOR_SPCPARALLEL_INC_DIR)/nvector_spcparallel.h $(includedir)
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                                                                                                      \
	   echo "${LIBTOOL} --mode=link ${MPICC} ${CFLAGS} ${MPI_FLAGS} -o ${FNVECTOR_SPCPARALLEL_LIB} ${FNVECTOR_SPCPARALLEL_LIB_FILES} -rpath ${libdir} ${LIBS} -static -avoid-version" ; \
	   ${LIBTOOL} --mode=link ${MPICC} ${CFLAGS} ${MPI_FLAGS} -o ${FNVECTOR_SPCPARALLEL_LIB} ${FNVECTOR_SPCPARALLEL_LIB_FILES} -rpath ${libdir} ${LIBS} -static -avoid-version ;        \
	   echo "${LIBTOOL} --mode=install ${INSTALL_LIB} ${FNVECTOR_SPCPARALLEL_LIB} ${libdir}" ;                                                                          \
	   ${LIBTOOL} --mode=install ${INSTALL_LIB} ${FNVECTOR_SPCPARALLEL_LIB} ${libdir} ;                                                                                 \
	 fi

clean:
	$(LIBTOOL) --mode=clean rm -f $(NVECTOR_SPCPARALLEL_LIB)
	rm -f $(NVECTOR_SPCPARALLEL_LIB_FILES)
	rm -f nvector_spcparallel.o
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                        \
	   echo "${LIBTOOL} --mode=clean rm -f ${FNVECTOR_SPCPARALLEL_LIB}" ; \
	   ${LIBTOOL} --mode=clean rm -f ${FNVECTOR_SPCPARALLEL_LIB} ;        \
	   echo "rm -f ${FNVECTOR_SPCPARALLEL_LIB_FILES}" ;                   \
	   rm -f ${FNVECTOR_SPCPARALLEL_LIB_FILES} ;                          \
	   echo "rm -f fnvector_spcparallel.o" ;                              \
	   rm -f fnvector_spcparallel.o ;                                     \
	 fi
	rm -f sundials_config.h

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(NVECTOR_SPCPARALLEL_LIB)
	rm -f $(includedir)/nvector_spcparallel.h
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                      \
	   echo "${LIBTOOL} --mode=uninstall rm -f ${libdir}/${FNVECTOR_SPCPARALLEL_LIB}" ; \
	   ${LIBTOOL} --mode=uninstall rm -f ${libdir}/${FNVECTOR_SPCPARALLEL_LIB} ;        \
	 fi

nvector_spcparallel.lo: $(srcdir)/nvector_spcparallel.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) -I. -I$(SHARED_INC_DIR) -I$(NVECTOR_SPCPARALLEL_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/nvector_spcparallel.c
fnvector_spcparallel.lo: $(srcdir)/fnvector_spcparallel.c
	@if test "X${FCMIX_ENABLED}" = "Xyes"; then                                                                                                                                  \
	   echo "${LIBTOOL} --mode=compile ${MPICC} ${CPPFLAGS} ${MPI_FLAGS} -I. -I${SHARED_INC_DIR} -I${NVECTOR_SPCPARALLEL_INC_DIR} -I${MPI_INC_DIR} ${CFLAGS} -c ${srcdir}/fnvector_spcparallel.c" ; \
	   ${LIBTOOL} --mode=compile ${MPICC} ${CPPFLAGS} ${MPI_FLAGS} -I. -I${SHARED_INC_DIR} -I${NVECTOR_SPCPARALLEL_INC_DIR} -I${MPI_INC_DIR} ${CFLAGS} -c ${srcdir}/fnvector_spcparallel.c ;        \
	 fi

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
