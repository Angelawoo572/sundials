#!/bin/sh

tarfile=$1
distrobase=$2

echo "   --- Add cvodes module to $tarfile"

tar ufv $tarfile $distrobase/src/cvodes/LICENSE
tar ufv $tarfile $distrobase/src/cvodes/README

#tar ufv $tarfile $distrobase/doc/cvodes/cvs_guide.ps
tar ufv $tarfile $distrobase/doc/cvodes/cvs_guide.pdf
#tar ufv $tarfile $distrobase/doc/cvodes/cvs_examples.ps
tar ufv $tarfile $distrobase/doc/cvodes/cvs_examples.pdf

tar ufv $tarfile $distrobase/include/cvodes/cvodes.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_dense.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_band.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_diag.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_spgmr.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_spbcgs.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_sptfqmr.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_spils.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_bandpre.h
tar ufv $tarfile $distrobase/include/cvodes/cvodes_bbdpre.h

tar ufv $tarfile $distrobase/src/cvodes/Makefile.in
tar ufv $tarfile $distrobase/src/cvodes/cvodes.c
tar ufv $tarfile $distrobase/src/cvodes/cvodea.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_io.c
tar ufv $tarfile $distrobase/src/cvodes/cvodea_io.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_dense.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_band.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_diag.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_spils.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_spgmr.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_spbcgs.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_sptfqmr.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_bandpre.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_bbdpre.c
tar ufv $tarfile $distrobase/src/cvodes/cvodes_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_dense_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_band_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_diag_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_spils_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_bandpre_impl.h
tar ufv $tarfile $distrobase/src/cvodes/cvodes_bbdpre_impl.h

tar ufv $tarfile $distrobase/examples/cvodes/serial/README
tar ufv $tarfile $distrobase/examples/cvodes/serial/Makefile.in
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjbanx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjbanx.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjdenx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjdenx.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjkryx_int.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjkryx_int.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjkryx_pnt.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsadjkryx_pnt.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsbanx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsbanx.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdenx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdenx.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdenx_uw.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdenx_uw.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdirectdem.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsdirectdem.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwddenx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwddenx.out1
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwddenx.out2
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdkryx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdkryx.out1
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdkryx.out2
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdnonx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdnonx.out1
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvsfwdnonx.out2
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskrydem_lin.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskrydem_lin.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskrydem_pre.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskrydem_pre.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskryx_bp.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskryx_bp.out
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskryx.c
tar ufv $tarfile $distrobase/examples/cvodes/serial/cvskryx.out

tar ufv $tarfile $distrobase/examples/cvodes/parallel/README
tar ufv $tarfile $distrobase/examples/cvodes/parallel/Makefile.in
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsadjkryx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsadjkryx_p.out
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsadjnonx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsadjnonx_p.out
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdkryx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdkryx_p.out1
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdkryx_p.out2
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdnonx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdnonx_p.out1
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsfwdnonx_p.out2
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvskryx_bbd_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvskryx_bbd_p.out
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvskryx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvskryx_p.out
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsnonx_p.c
tar ufv $tarfile $distrobase/examples/cvodes/parallel/cvsnonx_p.out

