#!/bin/sh

tarfile=$1
distrobase=$2

echo "  >>> Generate kinsol documentation"
cd $distrobase/kinsol/doc
make QUIET=-q ug_pdf
make QUIET=-q ex_pdf
cd -

echo "  >>> Add kinsol module"

tar uf $tarfile $distrobase/kinsol/LICENSE
tar uf $tarfile $distrobase/kinsol/README

tar uf $tarfile $distrobase/kinsol/doc/kin_guide.ps
tar uf $tarfile $distrobase/kinsol/doc/kin_guide.pdf
tar uf $tarfile $distrobase/kinsol/doc/kin_examples.ps
tar uf $tarfile $distrobase/kinsol/doc/kin_examples.pdf

tar uf $tarfile $distrobase/kinsol/include/kinsol.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_spgmr.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_spbcgs.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_sptfqmr.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_dense.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_band.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_spils.h
tar uf $tarfile $distrobase/kinsol/include/kinsol_bbdpre.h

tar uf $tarfile $distrobase/kinsol/source/Makefile.in
tar uf $tarfile $distrobase/kinsol/source/kinsol.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_io.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_spils.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_spgmr.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_spbcgs.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_sptfqmr.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_dense.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_bbdpre.c
tar uf $tarfile $distrobase/kinsol/source/kinsol_impl.h
tar uf $tarfile $distrobase/kinsol/source/kinsol_spils_impl.h
tar uf $tarfile $distrobase/kinsol/source/kinsol_dense_impl.h
tar uf $tarfile $distrobase/kinsol/source/kinsol_bbdpre_impl.h

tar uf $tarfile $distrobase/kinsol/fcmix/Makefile.in
tar uf $tarfile $distrobase/kinsol/fcmix/fkinsol.h
tar uf $tarfile $distrobase/kinsol/fcmix/fkinsol.c
tar uf $tarfile $distrobase/kinsol/fcmix/fkindense.c
tar uf $tarfile $distrobase/kinsol/fcmix/fkinband.c
tar uf $tarfile $distrobase/kinsol/fcmix/fkinpreco.c
tar uf $tarfile $distrobase/kinsol/fcmix/fkinjtimes.c
tar uf $tarfile $distrobase/kinsol/fcmix/fkinbbd.h
tar uf $tarfile $distrobase/kinsol/fcmix/fkinbbd.c

tar uf $tarfile $distrobase/kinsol/examples_ser/README
tar uf $tarfile $distrobase/kinsol/examples_ser/Makefile.in
tar uf $tarfile $distrobase/kinsol/examples_ser/kinbanx.c
tar uf $tarfile $distrobase/kinsol/examples_ser/kinbanx.out
tar uf $tarfile $distrobase/kinsol/examples_ser/kindenx1.c
tar uf $tarfile $distrobase/kinsol/examples_ser/kindenx1.out
tar uf $tarfile $distrobase/kinsol/examples_ser/kindenx2.c
tar uf $tarfile $distrobase/kinsol/examples_ser/kindenx2.out
tar uf $tarfile $distrobase/kinsol/examples_ser/kinkrydem_lin.c
tar uf $tarfile $distrobase/kinsol/examples_ser/kinkrydem_lin.out
tar uf $tarfile $distrobase/kinsol/examples_ser/kinkryx.c
tar uf $tarfile $distrobase/kinsol/examples_ser/kinkryx.out

tar uf $tarfile $distrobase/kinsol/fcmix/examples_ser/README
tar uf $tarfile $distrobase/kinsol/fcmix/examples_ser/Makefile.in
tar uf $tarfile $distrobase/kinsol/fcmix/examples_ser/fkinkryx.f
tar uf $tarfile $distrobase/kinsol/fcmix/examples_ser/fkinkryx.out

tar uf $tarfile $distrobase/kinsol/examples_par/README
tar uf $tarfile $distrobase/kinsol/examples_par/Makefile.in
tar uf $tarfile $distrobase/kinsol/examples_par/kinkryx_bbd_p.c
tar uf $tarfile $distrobase/kinsol/examples_par/kinkryx_bbd_p.out
tar uf $tarfile $distrobase/kinsol/examples_par/kinkryx_p.c
tar uf $tarfile $distrobase/kinsol/examples_par/kinkryx_p.out
    
tar uf $tarfile $distrobase/kinsol/fcmix/examples_par/README
tar uf $tarfile $distrobase/kinsol/fcmix/examples_par/Makefile.in
tar uf $tarfile $distrobase/kinsol/fcmix/examples_par/fkinkryx_p.f
tar uf $tarfile $distrobase/kinsol/fcmix/examples_par/fkinkryx_p.out
