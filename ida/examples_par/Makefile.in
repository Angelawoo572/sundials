SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

LIBTOOL = @LIBTOOL@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_ida -lsundials_nvecparallel -lsundials_shared

OBJECT_FILES = iheatpk.o iheatbbd.o iwebpk.o iwebbbd.o
EXEC_FILES   = iheatpk iheatbbd iwebpk iwebbbd

all: $(EXEC_FILES)

iheatpk: $(srcdir)/iheatpk.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/iheatpk.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/iheatpk $(builddir)/iheatpk.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
iheatbbd: $(srcdir)/iheatbbd.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/iheatbbd.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/iheatbbd $(builddir)/iheatbbd.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
iwebpk: $(srcdir)/iwebpk.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/iwebpk.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/iwebpk $(builddir)/iwebpk.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
iwebbbd: $(srcdir)/iwebbbd.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/iwebbbd.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/iwebbbd $(builddir)/iwebbbd.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}.lo ;                      \
	 done
	rm -f $(OBJECT_FILES)
