# File Makefile
#--------------------------------------------------------------------------
# Makefile for the IDA examples using the serial N_Vector implementation.
# @configure_input@
#--------------------------------------------------------------------------

# Shell
SHELL = @SHELL@

# SUNDIALS instalation directory
prefix      = @prefix@
exec_prefix = @exec_prefix@
includedir  = @includedir@
libdir      = @libdir@

# Path to sources
srcdir = @srcdir@

# Compiler and compiler options
CC       = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@

# SUNDIALS library and include directories
SUNDIALS_INC_DIR = ${includedir}
SUNDIALS_LIB_DIR = ${libdir}

INCDIRS = -I${SUNDIALS_INC_DIR}
LIBDIRS = -L${SUNDIALS_LIB_DIR}
LIBS    = -lida -lshared -lnvecserial -lm

#--------------------------------------------------------------------------------
# Make rules
#--------------------------------------------------------------------------------

all: irobx iheatsb iheatsk iwebsb

irobx iheatsb iheatsk iwebsb: % : ${srcdir}/%.c
	${CC} -c ${CFLAGS} ${CPPFLAGS} ${INCDIRS} ${srcdir}/$@.c
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $@.o ${LIBDIRS} ${LIBS}

clean:
	rm -f *.o
	rm -f irobx iheatsb iheatsk iwebsb

#---End of Makefile---