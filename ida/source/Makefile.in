SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

CONFIG_INC_DIR = $(top_builddir)/config
SHARED_INC_DIR = $(srcdir)/../../shared/include
IDA_INC_DIR    = $(srcdir)/../include

IDA_LIB       = libsundials_ida.la

IDA_LIB_FILES = ida.lo idaic.lo idaio.lo idadense.lo idaband.lo idaspbcg.lo idaspgmr.lo idasptfqmr.lo idabbdpre.lo
IDA_OBJ_FILES = ida.o idaic.o idaio.o idadense.o idaband.o idaspbcg.o idaspgmr.o idasptfqmr.o idabbdpre.o

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/band.lo \
                   $(SHARED_BUILD_DIR)/dense.lo \
                   $(SHARED_BUILD_DIR)/iterative.lo \
                   $(SHARED_BUILD_DIR)/sundialsmath.lo \
                   $(SHARED_BUILD_DIR)/nvector.lo \
                   $(SHARED_BUILD_DIR)/smalldense.lo \
                   $(SHARED_BUILD_DIR)/spgmr.lo \
                   $(SHARED_BUILD_DIR)/spbcg.lo \
                   $(SHARED_BUILD_DIR)/sptfqmr.lo

all: $(IDA_LIB_FILES)

install: shared $(IDA_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(IDA_LIB) $(IDA_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -version-info 0:0:0
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(IDA_LIB) $(libdir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/ida.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idadense.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idaband.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idaspbcg.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idaspgmr.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idasptfqmr.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idabbdpre.h $(includedir)
	$(INSTALL_HEADER) $(IDA_INC_DIR)/idaspils.h $(includedir)

shared:
	@cd $(SHARED_BUILD_DIR); $(MAKE); cd $(abs_builddir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(IDA_LIB)
	rm -f $(IDA_LIB_FILES)
	rm -f $(IDA_OBJ_FILES)

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(IDA_LIB)
	rm -f $(includedir)/ida.h
	rm -f $(includedir)/idadense.h
	rm -f $(includedir)/idaband.h
	rm -f $(includedir)/idaspbcg.h
	rm -f $(includedir)/idaspgmr.h
	rm -f $(includedir)/idasptfqmr.h
	rm -f $(includedir)/idabbdpre.h
	rm -f $(includedir)/idaspils.h

ida.lo: $(srcdir)/ida.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/ida.c
idaic.lo: $(srcdir)/idaic.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idaic.c
idaio.lo: $(srcdir)/idaio.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idaio.c
idadense.lo: $(srcdir)/idadense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idadense.c
idaband.lo: $(srcdir)/idaband.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idaband.c
idaspbcg.lo: $(srcdir)/idaspbcg.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idaspbcg.c
idaspgmr.lo: $(srcdir)/idaspgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idaspgmr.c
idasptfqmr.lo: $(srcdir)/idasptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idasptfqmr.c
idabbdpre.lo: $(srcdir)/idabbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDA_INC_DIR) $(CFLAGS) -c $(srcdir)/idabbdpre.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
