SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

LIBTOOL = @LIBTOOL@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_cvodes -lsundials_nvecparallel -lsundials_shared

OBJECT_FILES = pvkt.o pvfkt.o
EXEC_FILES   = pvkt pvfkt

all: $(EXEC_FILES)

pvkt: $(srcdir)/pvkt.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvkt.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvkt $(builddir)/pvkt.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)
pvfkt: $(srcdir)/pvfkt.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/pvfkt.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/pvfkt $(builddir)/pvfkt.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}.lo ;                      \
	 done
	rm -f $(OBJECT_FILES)
