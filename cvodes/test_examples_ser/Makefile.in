SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

@LIBTOOL_CMD@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

OBJ_EXT = @OBJ_EXT@

COMPILER_PREFIX = @COMPILER_PREFIX@
LINKER_PREFIX   = @LINKER_PREFIX@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_INCS    = -I$(SUNDIALS_INC_DIR) -I$(SUNDIALS_INC_DIR)/cvodes -I$(SUNDIALS_INC_DIR)/sundials

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_cvodes -lsundials_nvecserial

EXEC_FILES = cvsminhx cvs2odex cvsdiscx cvsfwdswitchx cvsnegsolx

all: $(EXEC_FILES)

cvsminhx: $(srcdir)/cvsminhx.c
	$(COMPILER_PREFIX) $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsminhx.c
	$(LINKER_PREFIX) $(CC) -o $(builddir)/cvsminhx $(builddir)/cvsminhx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS)
cvsnegsolx: $(srcdir)/cvsnegsolx.c
	$(COMPILER_PREFIX) $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsnegsolx.c
	$(LINKER_PREFIX) $(CC) -o $(builddir)/cvsnegsolx $(builddir)/cvsnegsolx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS)
cvs2odex: $(srcdir)/cvs2odex.c
	$(COMPILER_PREFIX) $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvs2odex.c
	$(LINKER_PREFIX) $(CC) -o $(builddir)/cvs2odex $(builddir)/cvs2odex.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS)
cvsdiscx: $(srcdir)/cvsdiscx.c
	$(COMPILER_PREFIX) $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsdiscx.c
	$(LINKER_PREFIX) $(CC) -o $(builddir)/cvsdiscx $(builddir)/cvsdiscx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS)
cvsfwdswitchx: $(srcdir)/cvsfwdswitchx.c
	$(COMPILER_PREFIX) $(CC) $(CPPFLAGS) $(SUNDIALS_INCS) $(CFLAGS) -c $(srcdir)/cvsfwdswitchx.c
	$(LINKER_PREFIX) $(CC) -o $(builddir)/cvsfwdswitchx $(builddir)/cvsfwdswitchx.$(OBJ_EXT) $(CFLAGS) $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o

uninstall: clean
	rm -f $(EXEC_FILES)
