SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SHARED_INC_DIR   = $(srcdir)/../../shared/include
IDAS_INC_DIR     = $(srcdir)/../include

IDAS_LIB       = libsundials_idas.la
IDAS_LIB_FILES = idas.lo idaa.lo idasic.lo idasio.lo idaband.lo idadense.lo idaspgmr.lo idabbdpre.lo

OBJECT_FILES = idas.o idaa.o idasic.o idasio.o idaband.o idadense.o idaspgmr.o idabbdpre.o

all: update $(IDAS_LIB_FILES)

update:
	@echo "${INSTALL_HEADER} ${top_builddir}/config.h ${builddir}/sundials_config.h" ; \
	 ${INSTALL_HEADER} ${top_builddir}/config.h ${builddir}/sundials_config.h

install: $(IDAS_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(IDAS_LIB) $(IDAS_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -avoid-version
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(IDAS_LIB) $(libdir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idaa.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idadense.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idaband.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idaspgmr.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idabbdpre.h $(includedir)

clean:
	$(LIBTOOL) --mode=clean rm -f $(IDAS_LIB)
	rm -f $(IDAS_LIB_FILES)
	rm -f $(OBJECT_FILES)
	rm -f sundials_config.h

uninstall:
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(IDAS_LIB)
	rm -f $(includedir)/idas.h
	rm -f $(includedir)/idaa.h
	rm -f $(includedir)/idadense.h
	rm -f $(includedir)/idaband.h
	rm -f $(includedir)/idaspgmr.h
	rm -f $(includedir)/idabbdpre.h

idas.lo: $(srcdir)/idas.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas.c
idaa.lo: $(srcdir)/idaa.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idaa.c
idasic.lo: $(srcdir)/idasic.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idasic.c
idasio.lo: $(srcdir)/idasio.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idasio.c
idaband.lo: $(srcdir)/idaband.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idaband.c
idadense.lo: $(srcdir)/idadense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idadense.c
idaspgmr.lo: $(srcdir)/idaspgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idaspgmr.c
idabbdpre.lo: $(srcdir)/idabbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I. -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idabbdpre.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd $(top_builddir) ;                 \
	 $(SHELL) ./config.status --recheck ; \
	 cd $(abs_builddir)
