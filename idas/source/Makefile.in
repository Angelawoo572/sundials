SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LIB_REVISION = @LIB_REVISION@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

CONFIG_INC_DIR = $(top_builddir)/config
SHARED_INC_DIR = $(srcdir)/../../shared/include
IDAS_INC_DIR   = $(srcdir)/../include

IDAS_LIB       = libsundials_idas.la

IDAS_LIB_FILES = idas.lo idas_ic.lo idas_io.lo idas_dense.lo idas_band.lo idas_spils.lo idas_spbcgs.lo idas_spgmr.lo idas_sptfqmr.lo idas_bbdpre.lo
IDAS_OBJ_FILES = idas.o idas_ic.o idas_io.o idas_dense.o idas_band.o idas_spils.o idas_spbcgs.o idas_spgmr.o idas_sptfqmr.o idas_bbdpre.o

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/sundials_band.lo \
                   $(SHARED_BUILD_DIR)/sundials_dense.lo \
                   $(SHARED_BUILD_DIR)/sundials_iterative.lo \
                   $(SHARED_BUILD_DIR)/sundials_math.lo \
                   $(SHARED_BUILD_DIR)/sundials_nvector.lo \
                   $(SHARED_BUILD_DIR)/sundials_smalldense.lo \
                   $(SHARED_BUILD_DIR)/sundials_spgmr.lo \
                   $(SHARED_BUILD_DIR)/sundials_spbcgs.lo \
                   $(SHARED_BUILD_DIR)/sundials_sptfqmr.lo

all: $(IDAS_LIB_FILES)

install: shared $(IDAS_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(IDAS_LIB) $(IDAS_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -version-info $(LIB_REVISION)
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(IDAS_LIB) $(libdir)
	$(INSTALL) -d $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idaa.h $(includedir)
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_dense.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_band.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_spbcgs.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_spgmr.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_sptfqmr.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_bbdpre.h $(includedir)/idas
	$(INSTALL_HEADER) $(IDAS_INC_DIR)/idas_spils.h $(includedir)/idas
	$(INSTALL_HEADER) $(srcdir)/idas_impl.h $(includedir)/idas
	$(INSTALL_HEADER) $(srcdir)/idaa_impl.h $(includedir)/idas

shared:
	@cd ${SHARED_BUILD_DIR} ; \
	 ${MAKE} ;                \
	 cd ${abs_builddir}

clean:
	$(LIBTOOL) --mode=clean rm -f $(IDAS_LIB)
	rm -f $(IDAS_LIB_FILES)
	rm -f $(IDAS_OBJ_FILES)

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(IDAS_LIB)
	rm -f $(includedir)/idas.h
	rm -f $(includedir)/idaa.h
	rm -f $(includedir)/idas/idas_dense.h
	rm -f $(includedir)/idas/idas_band.h
	rm -f $(includedir)/idas/idas_spbcgs.h
	rm -f $(includedir)/idas/idas_spgmr.h
	rm -f $(includedir)/idas/idas_sptfqmr.h
	rm -f $(includedir)/idas/idas_bbdpre.h
	rm -f $(includedir)/idas/idas_spils.h
	rm -f $(includedir)/idas/idas_impl.h
	rm -f $(includedir)/idas/idaa_impl.h
	@if test -d ${includedir}/idas ; then \
	   rmdir ${includedir}/idas ;         \
	fi

idas.lo: $(srcdir)/idas.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas.c
idas_ic.lo: $(srcdir)/idas_ic.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_ic.c
idas_io.lo: $(srcdir)/idas_io.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_io.c
idas_dense.lo: $(srcdir)/idas_dense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_dense.c
idas_band.lo: $(srcdir)/idas_band.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_band.c
idas_spils.lo: $(srcdir)/idas_spils.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_spils.c
idas_spbcgs.lo: $(srcdir)/idas_spbcgs.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_spbcgs.c
idas_spgmr.lo: $(srcdir)/idas_spgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_spgmr.c
idas_sptfqmr.lo: $(srcdir)/idas_sptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_sptfqmr.c
idas_bbdpre.lo: $(srcdir)/idas_bbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(IDAS_INC_DIR) $(CFLAGS) -c $(srcdir)/idas_bbdpre.c

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
