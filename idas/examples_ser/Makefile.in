SHELL = @SHELL@

srcdir       = @srcdir@
builddir     = @builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

LIBTOOL = @LIBTOOL@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

SUNDIALS_INC_DIR = $(includedir)
SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_idas -lsundials_nvecserial -lsundials_shared

OBJECT_FILES = irobx.o iheatsb.o iheatsk.o iwebsb.o
EXEC_FILES   = irobx iheatsb iheatsk iwebsb

all: $(EXEC_FILES)

irobx: $(srcdir)/irobx.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) $(CFLAGS) -c $(srcdir)/irobx.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/irobx $(builddir)/irobx.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
iheatsb: $(srcdir)/iheatsb.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) $(CFLAGS) -c $(srcdir)/iheatsb.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/iheatsb $(builddir)/iheatsb.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
iheatsk: $(srcdir)/iheatsk.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) $(CFLAGS) -c $(srcdir)/iheatsk.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/iheatsk $(builddir)/iheatsk.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)
iwebsb: $(srcdir)/iwebsb.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(SUNDIALS_INC_DIR) $(CFLAGS) -c $(srcdir)/iwebsb.c
	$(LIBTOOL) --mode=link $(CC) -o $(builddir)/iwebsb $(builddir)/iwebsb.lo $(LDFLAGS) $(LIBS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS)

clean:
	@for i in ${EXEC_FILES} ; do             \
	   $(LIBTOOL) --mode=clean rm -f $${i} ; \
	   rm -f $${i}.lo ;                      \
	 done
	rm -f $(OBJECT_FILES)
